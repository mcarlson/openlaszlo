<canvas layout="spacing: 10">
  <class name="box" extends="view"
         width="100" height="100" bgcolor="red">
    <attribute name="border" value="2"/>
    <view x="${parent.border}"
          y="${parent.border}"
          width="${parent.width-2*parent.border}"
          height="${parent.height-2*parent.border}"
          bgcolor="yellow"/>
  </class>
  
  <box/>
  <box border="4"/>
  <box border="8"/>
</canvas>
