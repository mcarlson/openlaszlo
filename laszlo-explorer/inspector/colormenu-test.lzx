<canvas>
    <debug x="50" height="200"/>
    <include href="colormenu.lzx"/>

    <view bgcolor="0x0000ff" width="20" height="20" clickable='true'
        onmousedown='cp.setVisible(true)' onmouseup='cp.setVisible(false)' >
        <colormenu id="cp"/>
    </view>
    <text>Click on the square, then release the mouse button to select a new color.</text>
    <simplelayout axis="y" spacing="20"/>

</canvas>
