<canvas>
<include href="incubator/scrolledittext.lzx" /> 
<include href="lz/vscrollbar.lzx"/>
<include href="incubator/newvscrollbar.lzx"/>
<include href="incubator/newvscrollbar_resources.lzx"/>

    <style name="scrollbar_style" basecolor="0xDDDEEB"  />

    <simplelayout axis="x" spacing="6"/>
    
    <view>
        <simplelayout axis="y" spacing="6"/>
        <scrolledittext name="set1" x="20" y="20" width="300" height="200">this is the fun scrolledittext</scrolledittext>
        <button>Wider
            <handler name="onclick">this.parent.set1.setAttribute("width", 350);</handler>
        </button>
    </view>

        <scrolledittext x="20" y="20" width="300" height="200" vscrollbarclassname="newvscrollbar">this is the fun scrolledittext</scrolledittext>

</canvas>
