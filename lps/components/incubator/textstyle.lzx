<library>
    <!-- TEXT STYLES -->
    <!--- Simple class that adds font attributes to style class (for usage, see /lzmodules/framework/styledtext.lzx)
        @START_CODE
        <textstyle font="futura" fontsize="12" fontstyle="bold" />
        @END_CODE
    -->
    <class name="textstyle" extends="style">
        <attribute name="font" value="arial" type="string" />
        <attribute name="fontsize" value="11" type="number" />
        <attribute name="fontstyle" value="plain" type="string" />
    </class>    
</library>
