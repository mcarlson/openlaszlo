&lt;class name="box2" width="100" height="100" bgcolor="${iceblue1}" /&gt;
 
&lt;box1 id="sun"&gt;
    &lt;text text="Sun"/&gt;
&lt;/box1&gt;

&lt;box2 id="mystic"&gt;
    &lt;text fgcolor="0xFFFFFF" text="Mystic"/&gt;
&lt;/box2&gt;
    
&lt;/canvas&gt;

