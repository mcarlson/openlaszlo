    
<canvas width="100%" height="200" proxied="false">
        <drawview height="200" width="200">
            <handler name="oncontext">
            this.moveTo(40,40)
            this.lineTo(80,40)
            this.lineTo(80, 80)
            this.lineTo(40,90)
            this.closePath()
            this.stroke()
    
            this.fillStyle = 0xff00ff;
            this.fill()
            </handler>
            <button onclick="parent.clear()" text="clear"/>
       </drawview>
    </canvas>
