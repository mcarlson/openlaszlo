       <area units="other" otherunits="/canvas[1]/window[1]/button[1]/@valign"/>
     </areaspec>
     <programlisting language="lzx">
       <textobject><textdata fileref="programs/views-tutorial-$10.lzx"/></textobject> 
     </programlisting>
   </programlistingco>
</example>
