       <area units="other" otherunits="/canvas[1]/window[1]/view[1]/view[1]"/>
     </areaspec>
     <programlisting language="lzx">
     <textobject><textdata fileref="programs/views-tutorial-$11.lzx"/></textobject> 
     </programlisting>
   </programlistingco>
</example>
