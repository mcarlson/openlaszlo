<canvas height="20">
    <view id="myView" onclick="setAttribute('opacity', 1.5 - this.opacity)" bgcolor="red">
        <text text="${'My opacity is ' + myView.opacity + '. Click to change it.'}"/>
    </view>
</canvas>
