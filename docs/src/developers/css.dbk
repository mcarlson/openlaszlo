&lt;class name="mookie" x="200" height="$style{'height'}" width="$style{'width'}" bgcolor="$style{'bgcolor'}"/&gt;

&lt;class name="blaylock"&gt;
&lt;window title="$style{'title'}" x="250" height="100" width="150" bgcolor="$style{'bgcolor'}"/&gt;
&lt;/class&gt;

&lt;class name="wilson" &gt;
