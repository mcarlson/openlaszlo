    width: 300;
    height: 200;
    bgcolor: "0x8F008F";
}

&lt;!--end--&gt;

&lt;!--The LZX file--&gt;

&lt;canvas&gt;

	&lt;stylesheet src="foo.css" /&gt;

	&lt;view id="gPhilip" width="$style{'width'}" height="$style{'height'}" bgcolor="$style{'bgcolor'}"/&gt;

&lt;/canvas&gt;

</programlisting></example>

