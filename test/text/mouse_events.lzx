<canvas debug="true"> 
  <simplelayout spacing="2"/>
  <handler name="onmousedown" reference="lz.GlobalMouse" args="v">
    Debug.write('lz.GlobalMouse onmousedown', v);
  </handler>
  <handler name="onmouseup" reference="lz.GlobalMouse" args="v">
    Debug.write('lz.GlobalMouse onmouseup', v);
  </handler>
  <handler name="onclick" reference="lz.GlobalMouse" args="v">
    Debug.write('lz.GlobalMouse onclick', v);
  </handler>
  <inputtext bgcolor="#cccccc" clickable="false" >default input
    <handler name="onmousedown" args="v">
        Debug.write('    view onmousedown event', this);
    </handler>
    <handler name="onmouseup" args="v">
        Debug.write('    view onmouseup event', this);
    </handler>
    <handler name="onclick" args="v">
        Debug.write('    view onclick event', this);
    </handler>
    
  </inputtext>
  <text bgcolor="#ffcccc" selectable="true" clickable="false">&lt;text&gt; selectable
    <handler name="onmousedown" args="v">
        Debug.write('    view onmousedown event', this);
    </handler>
    <handler name="onmouseup" args="v">
        Debug.write('    view onmouseup event', this);
    </handler>
    <handler name="onclick" args="v">
        Debug.write('    view onclick event', this);
    </handler>
  </text>

</canvas>
