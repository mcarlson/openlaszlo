<!-- test the password field --> 
 <canvas width="800" height="800"> 
    <font name="Times Roman" src="timmonsr.ttf" /> 
    <font name="Times Roman" src="timmonsb.ttf"  style="bold" />
    <font name="Helvetica-Condensed" src="helmetcr.ttf" />


    <!-- basic font propagation --> 
   <view fontsize="24"> 
    <simplelayout spacing="5" axis="y" /> 
    <text font="Times Roman">Below is a password field</text>

    <inputtext id="t1" password="false" width="200"  bgcolor="#ffccff" font="Times Roman" fontstyle="bold">regular input text</inputtext> 
    <inputtext id="p1" password="true" width="200"  bgcolor="#ffccff" font="Times Roman" fontstyle="bold">opensesame</inputtext> 

    <inputtext id="t2" width="200"  bgcolor="#ccccff" font="Helvetica-Condensed">regular input text</inputtext> 

    <inputtext id="p2" password="true" width="200"  bgcolor="#ccccff" font="Helvetica-Condensed">opensesame</inputtext> 

    <inputtext id="t3" width="200" fontsize="8">regular input text</inputtext> 

    <inputtext id="p3" password="true" width="200"  bgcolor="#ccccff" fontsize="8">opensesame</inputtext> 

    <text fontsize="8">Testing edittext with password=true</text>
    <edittext id="p4" password="true" width="200"  bgcolor="#ccccff" font="Helvetica-Condensed">opensesame</edittext> 

   </view> 
     
</canvas> 
