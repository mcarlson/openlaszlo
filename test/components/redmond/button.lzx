<canvas debug="true"  oninit="debug.setx(200)">
    <include href="redmond"/>
    <resource src="../testmedia/lzwinsort_rsc.swf"
                    name="LzWinSort_rsc"/>

    <view height="10" width="10"/>

    <view>
        <text>left aligned label</text>
        <button align="left" label="foo" width="100"/>
        <button align="left" label="foo" width="100" height="50"/>
        <simplelayout axis="y" spacing="4"/>
        </view>
    <view>
        <button/>
        <text x="100">tag only</text>
    </view>

    <view>
        <button>some text</button>
        <text x="100">text inside</text>
    </view>


    <button height="20" id="c1"
            width="100"
            onclick="debug.write(this, 'clicked')"
            align="left">
       Name
        <view name="sortarrow" resource="LzWinSort_rsc"
              y="6" x="44" visible="true" />
    </button>

    <view>
        <button MIN_TEXT_BORDER="20">
            warning
            <view x="12" bgcolor="red" height="10" width="10" valign="middle"/>
        </button>
        <text x="100">view + text inside</text>
    </view>

    <view>
        <button label="some text"/>
        <text x="100">label attribute</text>
    </view>

    <view>
        <button id="long" label="some long text goes on this button"/>
        <text>long label</text>
        <simplelayout axis="x" spacing="20"/>
    </view>

    <view>
        <button label="some text" height="50"/>
        <text x="100">height=50</text>
    </view>

    <view>
        <button label="some text" height="20"/>
        <text x="100">height=20</text>
    </view>

    <view>
        <button label="some text" width="100"/>
        <text x="100">width=100</text>
    </view>

    <view>
        <button label="some text" width="100" height="20"/>
        <text x="100">width=100 height=20</text>
    </view>


    <simplelayout axis="y" spacing="10"/>
    <constantlayout axis="x" value="20"/>


