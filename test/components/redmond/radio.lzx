<canvas debug="true">
  <debug y="250" height="120"/>
    <include href="redmond"/>
  <class name="showselection" extends='button'
        text="show selected"
        onclick="debug.write(r.selectedInGroup, r.selectedInGroup.text)">
      <attribute name="r" value="0" when="always"/>
 </class>
  <view>
     <view>
         <text>radios with text in tag</text>
         <radio id="r1">one</radio>
         <radio selected="true">two (selected)</radio >
         <radio>three</radio>
         <showselection r="r1"/>
         <simplelayout axis="y" spacing="4"/>
     </view>
      <view>
          <text>radios with label attribute (none selected)</text>
          <radio label="one"/>
          <radio label="two"/>
          <radio id="r2" label="three"/>
          <simplelayout axis="y" spacing="4"/>
          <showselection r="r2"/>
      </view>
     <simplelayout axis="y" spacing="10"/>

  </view>


  <view>
    <text>from the reference</text>
    <view>
        <radio label="Check me A1" selected="true"/>
        <radio label="Check me A2"/>
        <radio label="Check me A3"/>
        <simplelayout axis="x" spacing="4"/>
    </view>
    <view>
        <radio label="Check me B1" selected="true"/>
        <radio label="Check me B2"/>
        <radio label="Check me B3"/>
        <simplelayout axis="x" spacing="4"/>
    </view>
      <simplelayout axis="y" spacing="4"/>
  </view>
    <simplelayout axis="y" spacing="20"/>
</canvas>
