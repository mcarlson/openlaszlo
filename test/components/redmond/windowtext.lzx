<canvas debug="true" bgcolor="silver">
    <include href="redmond"/>

    <font src="bitstream-vera-1.10/verabd.ttf" name="vera"/>

    <debug x="250"/>
    <dataset name="ds">
        <item>first item</item>
        <item>second item</item>
        <item>third item</item>
    </dataset>
    <view x="30" y="30">

         <windowtext id="a" >(A) text in tag</windowtext>
         <windowtext id="b" label="(B) text as label attribute" bgcolor="silver"/>
        <windowtext id="c" multiline="true">(C) multiline=true</windowtext>
        <windowtext id="d" multiline="true" height="45">(D) multiline=true<br/>height=45</windowtext>
        <windowtext id="e" multiline="true" height="45" width="100">
            (E) multiline=true<br/>height=45 width=100</windowtext>
        <view bgcolor="blue" width="100" height="2"/>
        <windowtext id="a1" onfocus="debug.write('onfocus', this)"
            onblur="debug.write('onblur', this)"
            >(A1) text in tag - test focus</windowtext>


        <view bgcolor="blue" width="200" height="2"/>
         <view>
             <text>from a dataset with font and fontsize:</text>
             <windowtext x="10" font="vera" fontsize="20" width="200" datapath="ds:/item/text()"/>
             <simplelayout spacing="4"/>

         </view>
         <simplelayout spacing="10"/>
    </view>
