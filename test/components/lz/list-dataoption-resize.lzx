    </dataset>
    <inittimer/>
    <class name="resizelistitem" extends="textlistitem">
        <handler name="onselected">
            if (this.selected) this.setAttribute('height', 40);
            else this.setAttribute('height', 20);
        </handler>
    </class>
    <view x="20" y="30" layout="axis:x;spacing:20">
        <view layout="axis:y; spacing:2">
            <text>single select</text>
            <list id="d1" shownitems="4" y="50"
                dataoption="resize">
                <resizelistitem datapath="mydata:/date/day/text()"/>
            </list>
            <text y="35" text="${d1.value}"/>

            <view height="10" width="100"/>
            <text>multi select</text>
            <list id="d2" shownitems="4" multiselect="true"
                dataoption="resize">
                <resizelistitem datapath="mydata2:/date/day/text()"/>
            </list>
            <view layout="axis:y">
                <view layout="axis:x">
                    <button>Get Value
                        <handler name="onclick">
                            var val = d2.getValue();
                            d2val.setAttribute('text', typeof(val) + '\n' + val);
                        </handler>
                    </button>
                    <button>Clear
                        <handler name="onclick">
                            var val = d2.clearSelection();
                        </handler>
                    </button>
                </view>
                <text multiline="true" id="d2val" width="200" height="60"/>
            </view>

        </view>
        <list id="d3" shownitems="4"
             style="greencolors" bgcolor="${greencolors.basecolor}"
            spacing="2" dataoption="resize">
            <resizelistitem datapath="mydata3:/date/day/text()"/>
        </list>

    </view>



