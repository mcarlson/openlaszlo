<canvas>
    <debug y="200" height="100"/>

    <resource name="left_res"  src="resources/rectbtn_lft_up.swf" />
    <resource name="middle_res"  src="resources/btn_mid_up.swf" />
    <resource name="right_res"  src="resources/rectbtn_rt_up.swf" />

    <simplelayout spacing="10" inset="20"/>
    <constantlayout axis="x" value="20"/>

    <resizeview_x  id="a" width="100" height="30" clickable="true"
        left="left_res" middle="middle_res" right="right_res"
        onmousedown="resizer.apply()" onmouseup="resizer.remove()">
          <resizestate name="resizer"/>
    </resizeview_x>

    <resizeview_y  id="b" width="100" height="30" clickable="true"
        top="left_res" middle="middle_res" bottom="right_res"
        onmousedown="resizer.apply()" onmouseup="resizer.remove()">
          <resizestate name="resizer"/>
    </resizeview_y>

    <view id="v"/>
