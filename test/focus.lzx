<canvas width="1024" height="1024">
<simplelayout/>

<inputtext>Tab should move through A1-3 if the focus is in An, and
similarly for Bn and Cn.</inputtext>
<inputtext>Shift-TAB should move in the opposite order.</inputtext>

<!-- window is a focus trap -->
<window height="200">
  <simplelayout/>
  <inputtext>A1</inputtext>
  <inputtext>A2</inputtext>
  <inputtext>A3</inputtext>
  <!-- A focus trap within a focus trap -->
  <window width="70">
    <simplelayout/>
    <inputtext>B1</inputtext>
    <inputtext>B2</inputtext>
    <inputtext>B3</inputtext>
  </window>
</window>

<!-- Elements directly on the canvas -->
<inputtext>C1</inputtext>
<inputtext>C2</inputtext>
<inputtext>C3</inputtext>

