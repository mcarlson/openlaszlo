<canvas>
    <simplelayout axis="x" spacing="10"/>
    <view width="100" height="100" bgcolor="green">
        <text width="100" align="center" valign="middle"
            multiline="true">show hand cursor onclick</text>
        <handler name="onclick">
            LzCursor.showHandCursor(true);
        </handler>
    </view>
    <view width="100" height="100" bgcolor="red">
        <text width="100" align="center" valign="middle">hide hand cursor onclick</text>
        <handler name="onclick">
            LzCursor.showHandCursor(false);
        </handler>
    </view>
    <view width="100" height="100" bgcolor="yellow">
        <text width="100" align="center" valign="middle"
            multiline="true">test mouseover bgcolor change</text>
        <handler name="onmouseover">
            setBGColor(blue);
        </handler>
        <handler name="onmouseout">
            setBGColor(yellow);
        </handler>
    </view>

    <view width="100" height="100" bgcolor="yellow"
        clickable="true">
        <text width="100" align="center" valign="middle"
            multiline="true">another clickable view</text>
    </view>

</canvas>
