<canvas debug="true" height="500" width="500" >
    <class name="randv" oninit="LzTrack.register( this )">
        <attribute name="maxsize" value="100"/>
        <attribute name="bgcolor" value="Math.random() * 0xFFFFFF" when="once"/>
        <attribute name="x" value="Math.random()*(canvas.width-this.maxsize)" when="once"/>
        <attribute name="y" value="Math.random()*(canvas.height-this.maxsize)" when="once"/>
        <attribute name="width" value="Math.random() * this.maxsize" when="once"/>
        <attribute name="height" value="Math.random() * this.maxsize" when="once"/>
    </class>
    <view>
        <simplelayout/>
        <button onclick="LzTrack.activate()">Activate</button>
        <button onclick="LzTrack.deactivate()">Deactivate</button>
    </view>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <randv/>
    <view name="redone" oninit="LzTrack.register( this )" bgcolor="red" width="40" height="40" x="110" y="10" />
</canvas>
