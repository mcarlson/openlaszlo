<canvas>
  <simplelayout/>
  <view width="50" height="50" clip="true" stretches="both">
    <handler name="onclick">
       if (this.width == 50 ){
         this.setAttribute('width', 100);
         this.setAttribute('height', 100);
       } else {
         this.setAttribute('width', 50);
         this.setAttribute('height', 50);
       }
    </handler>
    <view stretches="both" width="100" height="100">
      <handler name="oninit">
        this.setSource('http:../resources/jpg/k8s.jpg');
      </handler>
    </view>
  </view>
