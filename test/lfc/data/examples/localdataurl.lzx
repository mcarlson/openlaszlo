<canvas width="1024" height="320" bgcolor="#FFFFFF" title="Embeds data from a relative URL" debug="true">
<view oninit="
debug.setx(150);
"/>
    <dataset name="weatherdata" request="true" src="http:weather.xml"/>
    <text>This shouldn't work...</text>

    <view datapath="weatherdata:/weather[1]" height="25" y="20">
        <view datapath="forecast[1]/day">
            <text name="day" x="42" width="140" datapath="@label">Tonight</text>
            <text name="desc" x="42" y="14" width="140" datapath="@desc">T-storms possible</text>
            <text name="temp" x="168" datapath="@temp">Hi 80 F</text>
        </view>
        <simplelayout axis="y" spacing="10"/>
    </view>
</canvas>
