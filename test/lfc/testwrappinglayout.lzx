<canvas debug="false" width="800" height="600">
    <include href="utils/layouts/library.lzx" />

    <class name="box" bgcolor="red" width="20" height ="10" >
<!--        <animator attribute="width" to="80" relative="true"-->
<!--                  duration="5000" motion="easeout"/>-->
    </class>

    <text>wrappinglayout: axis=x, spacing 10, inset 20</text>
    <view y="15" bgcolor="black" width="150">
        <box /> <box /> <box /> <box />
        <box /> <box /> <box /> <box />
        <box /> <box /> <box /> <box />
        <wrappinglayout axis="x" spacing="10" xinset="20" yinset="20"/>
    </view>

    <text y="135">wrappinglayout: axis=y, spacing 10, inset 20</text>
    <view y="150" bgcolor="black" height="150">
        <box /> <box /> <box /> <box />
        <box /> <box /> <box /> <box />
        <box /> <box /> <box /> <box />
        <wrappinglayout axis="y" spacing="10"  xinset="20" yinset="20"/>
    </view>


</canvas>
