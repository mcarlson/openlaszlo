<canvas width="100%" height="80%" debug="true">
  <debug  fontsize="12"/>

    <resource name="letters" src="resources"/>
    <view y="50" name="frtest" resource="letters"/>  
    
    <button onclick="frtest.play()">play</button>
    <button onclick="frtest.stop()" x="50">stop</button>

    <button onclick="frtest.setAttribute('frame', (Number(ed.getText())));
                     ed.setAttribute('text', Number(ed.getText()) + 1)" x="100">frame</button>
    <edittext name="ed" x="155" width="20">2</edittext>
    
    <text y="140" width="200" multiline="true">clicking on 'frame' should advance the letters in alphabetical order
        
    </text>



</canvas>
