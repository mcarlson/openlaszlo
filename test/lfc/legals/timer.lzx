<canvas>
    <text>
        <handler name="oninit">
            this.updateDel = new LzDelegate(this, "update");
            this.update();
        </handler>
        <method name="update">
            var t = new Date();
            info('update', t);
            this.setText(t);
            LzTimer.addTimer(this.updateDel, 500);
        </method>
    </text>
</canvas>
