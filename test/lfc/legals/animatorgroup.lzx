<canvas width="100%" height="80%">
    <view width="20" height="20" bgcolor="red" clip="true">
        <handler name="oninit">
            //this.animate('width', 100, 5000);
            //this.animate('height', 100, 5000);
            this.grow.doStart();
        </handler>
        <animatorgroup name="grow">
            <animator attribute="width" to="100" duration="5000"/>
            <animator attribute="height" to="100" duration="5000"/>
        </animatorgroup>
        <view resource="resc/logo.png" x="-20" y="-20"/>
    </view>
</canvas>
