<canvas height="80%">
    <simplelayout axis="y"/>
    <view>
        <simplelayout axis="x"/>
        <text>Foo!
            <handler name="oninit">
                Debug.write(this.text, this.getTextWidth());
            </handler>
        </text>
        <text fontstyle="bold">Bold Text
            <handler name="oninit">
                Debug.write(this.text, this.getTextWidth());
            </handler>
        </text>
        <text fontsize="14">14pt Text
            <handler name="oninit">
                Debug.write(this.text, this.getTextWidth());
            </handler>
        </text>
        <text font="Helvetica">Helvetica
            <handler name="oninit">
                Debug.write(this.text, this.getTextWidth());
            </handler>
        </text>
        <text>Longer text!
            <handler name="oninit">
                Debug.write(this.text, this.getTextWidth());
            </handler>
        </text>
    </view>
    <view>
        <simplelayout axis="y"/>
        <text>This text
            <handler name="oninit">
                Debug.write(this.text, this.getTextHeight());
            </handler>
        </text>
        <inputtext>And this inputtext
            <handler name="oninit">
                Debug.write(this.text, this.getTextHeight());
            </handler>
        </inputtext>
        <text>Should stack...
            <handler name="oninit">
                Debug.write(this.text, this.getTextHeight());
            </handler>
        </text>
    </view>
</canvas>
