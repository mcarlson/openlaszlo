<canvas height="80%">
    <view name="foo" resource="resc/logo.png">
        <method event="onx" args="x">
            //Debug.write('onx', x);
            this.txt.setText(x);
        </method>

        <method event="onclick">
            this.animate('x', 800, 1000);
        </method>
        <text name="txt" y="150" width="200"/>
    </view>

    <view width="20" height="20" y="${parent.foo.x}" bgcolor="green"/>
</canvas>
