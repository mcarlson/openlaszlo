<canvas width="100%" height="80%">
    <text>The green box should move to where you click the blue box.</text>
    <view width="3000" height="3000" x="100" y="100" bgcolor="0xccccff">
        <handler name="onmousedown">
            this.res.setX(this.getMouse('x'));
            this.res.setY(this.getMouse('y'));
        </handler>
        <view name="res" bgcolor="green" width="20" height="20"/>
    </view>
</canvas>
