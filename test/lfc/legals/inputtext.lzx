<canvas width="100%" height="80%">
    
    <inputtext name="foo" bgcolor="yellow">
        Some input text
        <method event="onblur">
            bar.setText(this.getText());
            Debug.write('blur');
        </method>
        <method event="onfocus">
            Debug.write('focus')
        </method>
        <method event="onkeyup" args="k">
            Debug.write('keyup', k)
        </method>
        <method event="onkeydown" args="k">
            Debug.write('keydown', k)
        </method>
        <method event="onselect">
            Debug.write('select')
        </method>
    </inputtext>
    <inputtext name="foo2" width="100" bgcolor="yellow">
        Some input text
        <method event="onblur">
            bar.setText(this.getText());
            Debug.write('blur');
        </method>
        <method event="onfocus">
            Debug.write('focus')
        </method>
        <method event="onkeyup" args="k">
            Debug.write('keyup', k)
        </method>
        <method event="onkeydown" args="k">
            Debug.write('keydown', k)
        </method>
        <method event="onselect">
            Debug.write('select')
        </method>
    </inputtext>
    
    <inputtext name="fubar" width="200" height="200" multiline="true" bgcolor="green">
        Some input text
        <method event="onblur">
            bar.setText(this.getText());
            Debug.write('blur');
        </method>
        <method event="onfocus">
            Debug.write('focus')
        </method>
        <method event="onkeyup" args="k">
            Debug.write('keyup', k)
        </method>
        <method event="onkeydown" args="k">
            Debug.write('keydown', k)
        </method>
        <method event="onselect">
            Debug.write('select')
        </method>
    </inputtext>

    <view width="50" height="50" bgcolor="red">
        <method event="onmousedown">
            this.setAttribute('bgcolor', 0xffff00);
        </method>
        <method event="onmouseup">
            this.setAttribute('bgcolor', 0xff9900);
        </method>
        <method event="onmouseover">
            this.setAttribute('bgcolor', 0xff9900);
        </method>
        <method event="onmouseout">
            this.setAttribute('bgcolor', 0xff0000);
        </method>
        <method event="onclick">
            Debug.write('text is ' + canvas.foo.getText());
        </method>
    </view>
    <simplelayout axis="x"/>

    <text id="bar" y="40" width="200"/>
</canvas>
