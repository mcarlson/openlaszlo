<canvas>
    <dataset name="dsTest">
        <root>
            <anode x="1"/>
            <bnode y="2"/>
        </root>
    </dataset>

    <datapointer name="myp" xpath="dsTest:/root/anode">
        <method event="ondata" args="d">
            var ex = dsTest.getFirstChild().getFirstChild();
            Debug.write( 'expecting', ex );
            Debug.write( 'got', d );
            if ( d != ex ){
                Debug.write( 'FAIL!' );
            }
        </method>
    </datapointer>
    <datapointer name="myp2" xpath="dsTest:/root/bnode/@y">
        <method event="ondata" args="d">
            Debug.write( 'expecting 2' );
            Debug.write( 'got', d );
            if ( d != 2 ){
                Debug.write( 'FAIL!' );
            }
        </method>
    </datapointer>

</canvas>
