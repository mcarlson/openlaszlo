<canvas debug="true">
    <inputtext name="inp">
        <method event="ontext">
            Debug.write( inp.getSelectionPosition() , 
                                  inp.getSelectionSize())
        </method>
        This is a very long string that I've already typed into an input box.
    </inputtext>
    <simplelayout/>
    <button onclick="inp.setSelection( 1 , 10 );
        Debug.write( inp.getSelectionPosition() , inp.getSelectionSize() )"/>
    <button onclick="inp.setSelection( 15 , 10 );
        Debug.write( inp.getSelectionPosition() , inp.getSelectionSize() )"/>
    <button onclick="inp.setSelection( 20 , 20 );
        Debug.write( inp.getSelectionPosition() , inp.getSelectionSize() )"/>
    <button onclick="inp.setSelection( 40 , 45 );
        Debug.write( inp.getSelectionPosition() , inp.getSelectionSize() )"/>
    <button onclick="inp.setSelection( 45 );
        Debug.write( inp.getSelectionPosition() , inp.getSelectionSize() )"/>


    <view height="10" width="200" bgcolor="gray"/>
    <inputtext name="inr" multiline="true" width="100" resizable="true" 
               height="100">
        <method event="ontext">
            Debug.write( inr.getSelectionPosition() , 
                                inr.getSelectionSize())
        </method>
    This is also very long string that I've already typed into an input box.
    </inputtext>
    <button onclick="inr.setSelection( 1 , 10 );
        Debug.write( inr.getSelectionPosition() , inr.getSelectionSize() )"/>
    <button onclick="inr.setSelection( 15 , 10 );
        Debug.write( inr.getSelectionPosition() , inr.getSelectionSize() )"/>
    <button onclick="inr.setSelection( 20 , 20 );
        Debug.write( inr.getSelectionPosition() , inr.getSelectionSize() )"/>
    <button onclick="inr.setSelection( 40 , 45 );
        Debug.write( inr.getSelectionPosition() , inr.getSelectionSize() )"/>
    <button onclick="inr.setSelection( 45 );
        Debug.write( inr.getSelectionPosition() , inr.getSelectionSize() )"/>
</canvas>
