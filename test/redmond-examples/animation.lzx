<!-- animation.lzx                                                         -->
<!--                                                                       -->
<!-- Laszlo Application Language (LZX) Example                             -->
<!--                                                                       -->
<!-- Basic animation of a moving object,                                   -->
<!-- Relative vs. Absolute                                                 -->
<!-- Animating various properties                                          -->
<!-- Animating layout                                                      -->
<!--                                                                       -->
<!--=======================================================================-->

<canvas width="600" bgcolor="#EAEAEA"> 
    <include href="redmond" />
    <splash/>
    <font src="helmetr.ttf" name="Helvetica" />

    <!-- BUTTONS FOR OPERATING ON THE WINDOW -->
    <view  name="wd_buttons" x="30" y="30">
        <simplelayout axis="x" spacing="3" />
        <button label="Reset"      width="70" height="20" 
                onclick="wd_buttons.resetWindow()"/>
        <button label="Move Left"  width="70" height="20"
                onclick="childWindow.animate('x',-200,1000,true);" />
        <button label="Move Right" width="70" height="20" 
                onclick="childWindow.animate('x',200,1000,true);" />
        <button label="Stretch"    width="70" height="20" 
                onclick="childWindow.animate('height',50,500,true);" />
        <button label="fade"       width="70" height="20" 
                onclick="childWindow.animate('opacity',-.33,500,true);" />
        <button label="restore"    width="70" height="20"
                onclick="childWindow.animate('opacity',1,500,false);" />
        <method name="resetWindow">
            var w = childWindow;
            w.bringToFront();
            w.openWindow();
            w.setAttribute("x",30);
            w.setAttribute("y",70); 
            w.setAttribute("width",215);
            w.setAttribute("height",300);  
            w.setAttribute("opacity",1);         
        </method>
    </view>

    <!-- THE WINDOW -->
    <window title="My Window" name="childWindow" x="30"  y="70" width="265" 
            height="200" resizable="true" opacity="0" closeable="true" fgcolor="#ccc">
         <menubar placement="menubar">
             <menu label="File" hasbutton="true" width="180">
                <menuitem label="New" height="16"  />
                <menuitem label="open..." height="16" />
                <menuitem label="Close" height="16"/>
                <menuseparator/>
                <menuitem label="Save" height="16" />
            </menu>
            <menu label="Edit" hasbutton="true" width="150">
                <menuitem label="Cut"   height="16" />
                <menuitem label="Copy"  height="16" />
                <menuitem label="Paste" height="16" />
            </menu>
        </menubar>

        <!-- Laszlo Animation swf -->
        <view width="200" height="300">
            <view x="50" y="50" resource="logo.swf" id="v"/>
        </view>
        <scrollbar axis="x"/>

        <animator attribute="opacity" from="0" to="1" duration="750" 
                  relative="false" />
        <animator attribute="x" to="30" duration="500" 
                  relative="false" />
        <animator attribute="y" to="70" duration="750" 
                  relative="false" />
        <animator attribute="height" to="100" duration="750" 
                  relative="true" />
        <animator attribute="width" to="-50" duration="750" 
                  relative="true" />
    </window>


</canvas>
