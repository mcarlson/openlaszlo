<canvas bgcolor="0xcccccc" debug="true">
    <simplelayout/>
    <inputtext x="40" y="30" height="20" width="150" bgcolor="0xffffff" clickable="true">
         <method name="inputtextevent" args="ename">
            super.inputtextevent(ename);
            if ($debug) Debug.debug('inputtextevent', ename, this); 
         </method>
         <method name="mouseevent" args="ename">
            super.mouseevent(ename);
            if ($debug) Debug.debug('mouseevent', ename, this); 
         </method>
    </inputtext>
    <inputtext x="40" y="30" height="20" width="150" bgcolor="0xffffff">
         <method name="inputtextevent" args="ename">
            super.inputtextevent(ename);
            if ($debug) Debug.debug('inputtextevent', ename, this); 
         </method>
         <method name="mouseevent" args="ename">
            super.mouseevent(ename);
            if ($debug) Debug.debug('mouseevent', ename, this); 
         </method>
    </inputtext>
    <handler name="onfocus" reference="lz.Focus" args="who">
        if ($debug) Debug.warn('global focus', who);
    </handler>
</canvas>
