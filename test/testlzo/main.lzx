<canvas width="100%" height="80%" >

  <include href="libdir/lib1.lzx"/>
  <include href="libdir/lib2.lzx"/>
  <include href="libglobal-dash.lzx"/>

  <foo flavor="instance from main app" oninit="this.bar()">
    <method name="bar">
      Debug.write("This class is from lib1", 'flavor is ', this.flavor);
    </method>
  </foo>


  <bar x="100" y="100" color="yellow" oninit="this.bar()">
    <method name="bar">
      Debug.write("This class is from lib2", 'color is ', this.color);
    </method>
  </bar>


  <bar x="200" y="100" color="red" oninit="this.bar()">
    <method name="bar">
      Debug.write("This class is from lib2", 'color is ', this.color);
    </method>
  </bar>


  <bar x="300" y="100" color="green" oninit="this.bar()">
    <method name="bar">
      Debug.write("This class is from lib2", 'color is ', this.color);
      this.mymethod();
    </method>
  </bar>

  <handler name="oninit">
    blargh.animate('x', 400, 3000);
  </handler>


</canvas>
