<canvas width="984" height="400">
    <view bgcolor="teal" height="80" width="${canvas.width}">
        <simplelayout axis="x" spacing="20"/>
        <button onclick="textBelow.setVisible( true ) ">Click me</button>
        <button onclick="lz.Browser.loadURL('javascript:positionHTMLArea(100, 100)')" 
            text="Reposition HTML"/>
        <button onclick="lz.Browser.loadURL('javascript:setClippingRegion( 10, 250, 300, 80)')" 
            text="Clip HTML"/>

    </view>
    <view bgcolor="green" height="200" y="200" width="${canvas.width}">
        <text id="textbelow" visible="false"> This is just one app.</text>
    </view>
</canvas>
