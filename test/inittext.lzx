<canvas bgcolor="silver" width="1024" height="600">
  <simplelayout axis="y" spacing="10"/>
  <text>Checking if the descenders get clipped ('y', 'g', etc)</text>
  <view bgcolor="#ccffcc">
    <simplelayout axis="y" spacing="10"/>
    <text>&lt;simpleinputtext&gt;</text>
    <simpleinputtext id="e1" text="ggg yyy baseline ggg ypy"/>
    <text width="200" onclick="e1.settext( 'e1.input.fixedsize = ' + e1.input.fixedsize )">click me</text>
  </view>

  <view bgcolor="#ffcccc">
    <simplelayout axis="y" spacing="10"/>
    <text>&lt;edittext&gt;</text>
    <edittext  id="e2" >ggg yyy baseline ggg ypy</edittext>
    <text width="200" onclick="e2.settext( 'e2.field.fixedsize = ' + e2.field.fixedsize )">click me</text>
  </view>

  <view bgcolor="#ccccff">
    <simplelayout axis="y" spacing="10"/>
    <text>&lt;inputtext&gt;</text>
    <inputtext bgcolor="white" id="e3">ggg yyy baseline ggg ypy</inputtext>
    <text width="200" onclick="e3.settext( 'e3.fixedsize = ' + e3.fixedsize )">click me</text>
  </view>
</canvas>
