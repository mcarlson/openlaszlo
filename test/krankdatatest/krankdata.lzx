<canvas title="krank data test" 
        width="1200"
        oninit="Debug.write( 'canas init' )">

    <debug y="200" height="150" width="400"/>
    <dataset name="ds1" src="testdata.xml"/>
    <dataset name="ds2" src="testdata.xml" type="http" request="true"/>

    <text resize="true" text="${(new Date() ).toString()}"/>
    <view>
        <simplelayout axis="x"/>
        <view>
            <simplelayout/>
            <text fontstyle="bold">Local</text>
            <text datapath="ds1:/records/*/@label"/>
        </view>
        <view>
            <simplelayout/>
            <text fontstyle="bold">Remote</text>
            <text datapath="ds2:/records/*/@label"/>
        </view>
    </view>
    <view> 
        <button 
            onclick="parent.target.setSource( 'http://www.laszlosystems.com/hubble/2000-10-a-640_wallpaper.jpg')">Load image</button>
        <view name="target"/>
        <simplelayout axis="x"/>
    </view>
    <simplelayout/>
</canvas>
