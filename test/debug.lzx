<canvas width="600" height="800" debug="true">
    <splash/>
    <debug y="400" />
    <window title="Window 1" x="10" y="10" width="200" height="200" >
        <view resource="resources/swf/includeme.swf"/>
    </window>
    <window title="Window 2" width="350" height="350" x="50" y="50"
            resizable="true" >
        <view width="200" height="500" >
        <simplelayout axis="y" spacing="2" />
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <button x="20" text="click to add debug info" height="30" width="400"
                onclick="Debug.write('Some long debug information')" />
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <checkbox x="20" text="checkbox" width="200"
                  onmousedown="Debug.write('check', 5 , 'foobunny' , this)"/>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <view x="20">
          <simplelayout axis="y" spacing="3" />
          <text     width="40" />
          <radiogroup>
            <radiobutton    text="radio 1" width="40"/>
            <radiobutton    text="radio 2" width="40"/>
            <radiobutton    text="radio 3" width="40"/>
          </radiogroup>
          <text     width="40" />
        </view>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        <text width="200">here is some text</text>
        </view>
        <scrollbar axis="y" />
    </window>
</canvas>
