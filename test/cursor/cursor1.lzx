<canvas width="100%" height="80%" debug="true">
  <debug  fontsize="12"/>
    <resource name="colResize" src="grid_cursor.swf"/>
    <resource name="crosshair" src="cursor_crosshair.png" offsetx="-8" offsety="-8" />
    <resource name="uparrow" src="sort_arrow_up.swf"/>


                <view height="20" bgcolor="#cccccc" width="40"
                    x="20" y="10"
                    name="resizer"
                    clickable="true"
                    cursor="colResize">
                </view>

                <view height="20" bgcolor="#cccccc" width="40"
                    x="100" y="10"
                    name="resizer2"
                    clickable="true"
                    cursor="crosshair" >
                </view>

                <view height="20" bgcolor="#cccccc" width="40"
                    x="160" y="10"
                    name="arrow"
                    clickable="true"
                    cursor="uparrow" >
                </view>

<view y="100" x="10" resource="crosshair"/>

</canvas>

