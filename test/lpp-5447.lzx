<canvas> 
    <simplelayout/>
    <view>
        <inputtext>Can't select or click because we're covered by another view</inputtext>
        <view width="50%" height="100%" bgcolor="red" opacity=".2"/>
    </view>
    <view>
        <inputtext>Can select and click - we're covered by a context menu view</inputtext>
        <view width="100%" height="100%">
            <contextmenu>
                <contextmenuitem caption="foo" />
            </contextmenu> 
        </view>
    </view>
    <inputtext oninit="lz.Focus.setFocus(this)">Should be able to click other stuff when I'm focused</inputtext>
</canvas>
