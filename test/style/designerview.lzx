<library> 

<class name="designerview" width="$style{'width'}" height="50" >
    <attribute name="innercolor" type="string" value="0x000000"/>
    <attribute name="group" type="string" value=""/>
    <attribute name="miscdata" type="string" value="$style{'miscdata'}"/>
    <attribute name="bordercolor" type="string" value="0x000000"/>
   <view name="outerborder" width="100%" height="100%" 
        bgcolor="$style{'bordercolor'}">
        <view name="innerbox" 
            x="$style{'borderwidth'}" 
            y="$style{'borderwidth'}"
            width="${parent.width-2*this.x}"
            height="${parent.height-2*this.y}"
            bgcolor="$style{'innercolor'}">
            <text x="$style{'textinset'}"
                fgcolor="$style{'labelcolor'}"
                fontsize="9"
                y="$style{'textinset'}" 
                name="txt" text="${classroot.id}" />
        </view>
    </view>
</class>

<class name="dezignerview" width="$style{'width'}" height="50" >
    <attribute name="group" type="string"/>
    <attribute name="miscdata" type="string" value="$style{'miscdata'}"/>
    <attribute name="bordercolor" type="string" value="0x000000"/>
    <attribute name="innercolor" type="string" value="$style{'innercolor'}"/>
    <view name="outerborder" width="100%" height="100%" 
        bgcolor="$style{'bordercolor'}">
        <view name="innerbox" 
            x="$style{'borderwidth'}" 
            y="$style{'borderwidth'}"
            width="${parent.width-2*this.x}"
            height="${parent.height-2*this.y}"
            bgcolor="$style{'innercolor'}">
            <text x="$style{'textinset'}"
                fgcolor="$style{'labelcolor'}"
                fontsize="9"
                y="$style{'textinset'}" 
                name="txt" text="${classroot.id}" />
        </view>
    </view>
</class>

</library>