<library>    
    <stylesheet src="../neighborhood/kennedy.css" />
    
    <class name="DescendantSelectorTestCase" extends="TestCase" >

        <!-- Descendant selectors test -->        
        <method name="testSimpleDescendant">
            assertEquals("politician", gJoeJr.getAttribute("occupation"));            
            assertEquals("politician", gRosemary.getAttribute("occupation"));            
            assertEquals("politician", gKathleen.getAttribute("occupation"));            
        </method>

        <method name="testOverridenDescendant">
            assertEquals("president", gJFK.getAttribute("occupation"));
            assertEquals("senator", gTed.getAttribute("occupation"));                                                
        </method>

        <!-- Descendant selectors test --> 
        <method name="testGrandchildren">
            assertEquals("jetsetter", gCBK.getAttribute("occupation"));
            assertEquals("jetsetter", gJFKJr.getAttribute("occupation"));            
            assertEquals("jetsetter", gPatrick.getAttribute("occupation"));            
        </method>
        
        <!-- This is the heart of how themes for diamond will work. --> 
        <method name="testCatAncestor">
            assertEquals( "kennedycat", gJoeCat.getAttribute("misc"));                        
            assertEquals( "kennedycat", gPatCat.getAttribute("misc"));                                    
            assertEquals( "smithcat", gBlackie.getAttribute("misc"));                                                
        </method>
        
        <method name="testSpecificity">
            assertEquals("plainoldcat", gKittycat.getAttribute("misc"));        
        </method>
        
    </class>

</library>        
