<canvas cssfile="oldway1.css">

<window id="gContactsWindow" width="200" height="200" bgcolor="#9fdc39" title="Contacts">
    <view x="10" y="10" width="${parent.width-20}" height="${parent.height-20}" >
        <simplelayout/>    
        <view width="100%" height="20" name="nice" >
            <text>nice</text>
        </view>
        <text width="100%" name="more">more more lots of text so you can see what color it is</text>
        <view height="20" />
        <view width="${parent.width-10}" height="50" >
            <text>peep</text>
        </view>
    </view>
</window>

<window id="gVideoWindow" y="260" width="200" height="200" title="Videos">
    <view x="10" y="10" width="100%">
        <simplelayout/>    
        <view width="100%" height="20" name="nice" >
            <text width="100%">it's nice nice</text>
        </view>
        <text name="more">more</text>
        <view height="20" />
        <view width="${parent.width-10}" height="50" >
            <text>peep</text>
        </view>
    </view>
</window>

<window id="gNormalWindow" y="480" width="200" height="200" title="Normal">
<text>i'm some text inside the normal window.</text>
</window>
</canvas>