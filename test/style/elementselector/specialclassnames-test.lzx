<library>
    <stylesheet>
        view {
            nicebgcolor: #366d3c;
            styledname: "Frank";
        }
        
        text {
            foo: "text loves foo!";
        }
        
        view[name="jean"] {
            nicebgcolor: #81103f;   
        }

    </stylesheet>
    
    
    <class name="SpecialClassNamesTestCase">
        <view id="gView" 
            name="$style{'styledname'}"
            bgcolor="$style{'nicebgcolor'}"
            height="100" width="100">
            <text text="$style{'styledname'}" 
                width="$once{parent.width}"/>
        </view>

        <text id="gFooText" text="$style{'foo'}" width="200" />

        <view id="gJean" name="jean" width="250" height="150" bgcolor="$style{'nicebgcolor'}" />

        <method name="testview">
            assertEquals( '0x366d3c', this.gView.getAttribute("bgcolor") );
            assertEquals( "Frank", this.gView.getAttribute("name"))
        </method>

        <method name="testtext">
            assertEquals( "text loves foo!", gFooText.getAttribute("text"));
        </method>

        <method name="testclassattr">
            assertEquals( '0x81103f', this.gJean.getAttribute("bgcolor"));
        </method>
    </class>
    
</library>