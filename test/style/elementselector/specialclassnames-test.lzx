<library>
    
    <stylesheet>
        view {
            nicebgcolor: "0x366d3c";
            styledname: "Frank";
        }
        
        text {
            foo: "text loves foo!";
        }
        
        view[name="jean"] {
            nicebgcolor: "0x81103f";   
        }

    </stylesheet>
    
    <view id="gView" 
        name="$style{'styledname'}"
        bgcolor="$style{'nicebgcolor'}"
        height="100" width="100">
        <text text="$style{'styledname'}" 
            width="$once{parent.width}"/>
    </view>
    
    <text id="gFooText" text="$style{'foo'}" width="200" />
    
    <view id="gJean" name="jean" width="250" height="150" bgcolor="$style{'nicebgcolor'}" />

    <testsuite name="specialClassNamesSuite" loglevel="log">
        <handler name="oninit">
            this.addTest( "testview");
            this.addTest( "testtext");
            this.addTest( "testclassattr");            
            this.run();
        </handler>

        <method name="testview">
            this.assertEquals( 0x366d3c, gView.getAttribute("bgcolor") );
            this.assertEquals( "Frank", gView.getAttribute("name"))
            this.finishedTest("testview");
        </method>

        <method name="testtext">
            this.assertEquals( "text loves foo!", gFooText.getAttribute("text"));
            this.finishedTest("testtext");
        </method>

        <method name="testclassattr">
            this.assertEquals( 0x81103f, gJean.getAttribute("bgcolor"));
            this.finishedTest("testclassattr");
        </method>
        
    </testsuite>
    
    
</library>