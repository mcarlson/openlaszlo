<library>
    
    <stylesheet>
    [name='Canyon'] {
        width: 300;
        miscdata: "san jose state";
        innercolor: #8F008F;
    }

    [name='Jareth'] {
        width: 200;
        miscdata: "somewhere far away";
        innercolor: #245f89;
    }
    
    [group="everest"] {
        innercolor: #25592c;
    }
    
    [group="dougy"] {
        innercolor: #be6127;
    }
    
    </stylesheet> 
    
    <designerview name="Canyon" id="gCanyon" initstage="late"/>
    <designerview name="Jareth" id="gJareth" initstage="late" />

    <designerview id="gEverest" group="everest" />
    <designerview id="gDouggie" group="dougy" />    
    
        
    <class name="AttrSelectorTestCase" extends="TestCase">
        <method name="testCanyon">
            assertNotNull( gCanyon );
            assertEquals( 300, gCanyon.getWidth() );
            assertEquals( "san jose state", gCanyon.getAttribute("miscdata"));
        </method>

        <method name="testJareth">
            assertNotNull( gJareth );
            assertEquals( 200, gJareth.getWidth() );
            assertEquals( "somewhere far away", gJareth.getAttribute("miscdata"));
        </method>

        <method name="testNonNameAttrs">
            assertEquals( 0x25592c, gEverest.getAttribute("innercolor") );
            assertEquals( 0xbe6127, gDouggie.getAttribute("innercolor") );            
        </method>
    </class>
</library>