<canvas height="600" width="800" debug="true" >
  <include href="resources/lzx/vts.lzx"/>
  <window id="wd" title="TabSlider Demo" x="100" y="100" width="300" height="200" resizable="true" >
    <tabslider id="tslider" 
	       bgcolor="white" 
	       height="${immediateparent.height}" 
	       width="${immediateparent.width}" 
	       spacing="2" 
	       minTabWidth="20" 
	       slideDuration="333" >
      <tabelement bgcolor="red" />
      <tabelement bgcolor="blue" />
      <tabelement bgcolor="red" />
      <tabelement bgcolor="red" minwidth="30"/>
    </tabslider>
  </window>
  <button text="Add Green Tab" onclick="new tabelement(tslider,{bgcolor:0x00FF00}); " />
</canvas>
