<canvas>
  <view width="100" height="100" bgcolor="red">
    <dragstate name="foo"/>
    <text x="20" y="40">DRAG STATE</text>
    <handler name="onmousedown">
      foo.apply();
    </handler>
    <handler name="onmouseup">
      foo.remove();
    </handler>
  </view>



  <view x="300" y="300"  width="100" height="100" bgcolor="blue">
    <resizestate name="foo"/>
    <text x="20" y="40">RESIZE STATE</text>
    <handler name="onmousedown">
      foo.apply();
    </handler>
    <handler name="onmouseup">
      foo.remove();
    </handler>
  </view>

</canvas>
