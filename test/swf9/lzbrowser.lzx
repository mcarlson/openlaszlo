<canvas>

  <button y="0">Alert
    <handler name="onclick">
    LzBrowser.loadJS("alert('hello');", "_self");
    </handler>
  </button>

  <text name="status" y="30" width="800" height="500" multiline="true">
    <method name="append" args="t">
      this.setText(this.getText() + t + "\n");
    </method>

  <handler name="oninit">
    status.append("LzBrowser.getVersion = " + LzBrowser.getVersion());
    status.append("LzBrowser.getLoadURL = " + LzBrowser.getLoadURL());
    status.append("LzBrowser.getInitArg('lzr') = " + LzBrowser.getInitArg('lzr'));
    status.append("LzBrowser.getLoadURLAsLzURL = " + LzBrowser.getLoadURLAsLzURL().toString());
  </handler>

  </text>
</canvas>
