<!-- Resize the window.  The rectangles should remain 1, 2, 3, and 4 quarters the width of the window. -->
<canvas>
  <window resizable="true" height="80">
    <view width="25%" height="20" bgcolor="red"/>
    <view width="50%" height="20" bgcolor="green"/>
    <view width="75%" height="20" bgcolor="blue"/>
    <view width="100%" height="20" bgcolor="yellow"/>
    <simplelayout axis="y"/>
  </window>
</canvas>
