<canvas>


    <rtmpconnection id="rtc" 
        autoconnect="true" 
        debug="true"
        src="rtmp://localhost/test/instance1"
    />

    <simplelayout/>

    <rtmpstatus/>

    <videoview id="v" 
        stream="${s}"
    />

    <mediastream id ="s" 
        debug="true" 
        type="rtmp" 
        url="good-dog"
    />

    <button
        text="play" 
        onclick="s.play()"
    />

    <button
        text="pause" 
        onclick="s.pause()"
    />

    <text
    resize="true"
        text="${'time: ' + s.time}"
    />

    <text
    resize="true"
        text="${'totaltime: ' + s.totaltime}"
    />


</canvas>
