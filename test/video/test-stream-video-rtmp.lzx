<canvas>

    <rtmpconnection id="rtc" 
        autoconnect="true" 
        debug="true"
        src="rtmp://localhost/test/instance1"
    />
<!--
        src="rtmp://198.64.172.160/test_video"
-->

    <simplelayout/>

    <rtmpstatus/>

    <videoview>

        <mediastream id="s" 
            debug="true" 
            type="rtmp" 
            url="good-dog"
        />
<!--
            url="movies/g/simpsons"
-->

    </videoview>

    <button
        text="play" 
        onclick="s.play()"
    />

    <button
        text="pause" 
        onclick="s.pause()"
    />

    <text
        text="${'playtime: ' + s.playtime}"
    />

    <text
        text="${'totaltime: ' + s.totaltime}"
    />


</canvas>
