<canvas>
<debug x="200" y="200" 
    width="${canvas.width-this.x-4}"
    height="${canvas.height-this.y-4}"/>

<microphone id="m" mute="${controlpanel.ismuted.value}"/>
<view x="10" y="20" width="102" height="12" bgcolor="black">
    <view x="1" y="1" bgcolor="yellow" width="${m.level}" height="10"/>
</view>

<view y="100">
    <simplelayout axis="x" inset="10" spacing="20"/>
    <view layout="axis:y;spacing:4">
        <text text="${'name: ' + m.devicename}" resize="true"/>
        <text text="${'index: ' + m.deviceindex}" resize="true"/>
        <text text="${'access: ' + m.access}" resize="true"/>
        <text text="${'level: ' + m.level}" resize="true"/>
    </view>
    <view height="100" width="1" bgcolor="black"/>
    <view id="controlpanel" 
          layout="axis:y;spacing:10">
        <checkbox name="ismuted" text="mute" value="true"/>
    </view>
</view>
</canvas>

