<canvas>


    <rtmpconnection 
        src="rtmp://localhost/test" 
        autoconnect="true"
    />
   
    <simplelayout/>

    <rtmpstatus/>

    <view
        layout="axis: x; inset: 10; spacing: 10"
    >

        <videoview id="live" 
            url="me" 
            type="rtmp" 
            oninit="this.stream.broadcast()"
        >

            <camera
                show="true"
            />

        </videoview>

        <videoview id="vp" 
            url="me" 
            type="rtmp" 
            oninit="this.stream.play()"
        />

    </view>


</canvas>
