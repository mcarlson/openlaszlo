<canvas width="100%" height="80%" debug="true" proxied="false">
  <include href="video.lzx"/>
  <include href="rtmpconnection.lzx"/>
  <debug  />
  <rtmpconnection id="rtc" src="rtmp:/test/instance1" oninit="this.connect()"/>
  <simplelayout inset="10" spacing="10"/>
  <text text="${rtc.status}"/>
  <view bgcolor="black" width="168" height="128"
    onmousedown="this.resizer.apply()" onmouseup="this.resizer.remove()">
    <resizestate name="resizer"/> 
    <video id="v" x="4" y="4"
        width="${parent.width-8}" height="${parent.height-8}"/>   
  </view>
  <button onclick="v.playvideo('vanillacoke')" text="play vanillacoke"/>
  <button onclick="v.playvideo('sumo')" text="play sumo"/>
  <button onclick="v.pausevideo()" text="pause"/>
</canvas>
