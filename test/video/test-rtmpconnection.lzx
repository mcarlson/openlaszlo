<canvas>
     
    <simplelayout inset="10" spacing="10"/>
    <rtmpconnection id="rtc" src="rtmp://localhost/test" autoconnect="false"
                    debug="true"/>
    <view layout="axis:x;spacing:4">
        <rtmpstatus/>
        <text text="${rtc.status}"/>
    </view>
    <button onclick="rtc.connect()">Click to Connect</button>
</canvas>
