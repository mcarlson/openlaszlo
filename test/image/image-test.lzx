<canvas debug="true">
    <dataset name="imagedata">
        <image url="food_is_large.jpg"/>
    </dataset>

    <wrappinglayout/>
    <image prefix="img/" datapath="imagedata:/image/@url"/>
    <image prefix="img/" imageurl="food_is_large.jpg"/>
    <image imageurl="food_is_large.jpg"/>
    <image>
        <text>Click me</text>
        <method event="onclick">
            this.setAttribute('imageurl', 'food_is_large.jpg');
        </method>
    </image>
    <image forcereload="true">
        <text>Click me to reload</text>
        <method event="onclick">
            this.setAttribute('imageurl', 'food_is_large.jpg');
        </method>
    </image>

    <!-- these shouldn't load -->
    <image prefix="img/" datapath="imagedata:/image/@bogus"/>
    <image datapath="imagedata:/image/@bogus"/>
    <image prefix="img/"/>
    <image/>
</canvas>

