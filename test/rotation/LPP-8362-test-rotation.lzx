<canvas>
    
    <text text="${canvas.runtime}" fontsize="50"></text>

    <view id="container" x="100" y="100" width="200" height="200" bgcolor="#ccffaa">
        <text text="${parent.x+','+parent.y}" />
        <text align="right" valign="bottom" text="${(parent.x+parent.width)+','+(parent.y+parent.y)}" />
        
        <view width="100" height="100" rotation="45" bgcolor="#ffccaa" opacity=".5" />
        
    </view>
    

</canvas>
