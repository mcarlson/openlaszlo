<canvas debug="true">
  <include href="af_styles.lzx"/>
  <include href="lz"/>
  
  <purplestyle name="lpcolors" basecolor="0xffffd5" />
  <purplestyle name="pcolors" basecolor="0xa776c4" />
  
  <class name="ptab" style="pcolors" extends="tab">
    <method event="onselected">
      this.selected ? this.setStyle(lpcolors) : this.setStyle(pcolors);
    </method>
  </class>
  <class name="ptabpane" extends="tabpane" style="lpcolors" tabclass="ptab"/>
  
  <view layout="class: simplelayout; axis: y; spacing: 5"
    bgcolor="yellow">
    <text>Explicitly declared tabclass</text>
    <tabs y="10" barclass="tabsbar" >
      <tabpane text="one" tabclass="ptab" style="lpcolors">
        <text>one</text>
      </tabpane>
      <tabpane text="two" tabclass="ptab" style="lpcolors">
        <text>two</text>
      </tabpane>
      <tabpane text="three" tabclass="ptab" style="lpcolors">
        <text>three</text>
      </tabpane>
    </tabs>
    <text>tabpane instance with tabclass</text>
    <tabs y="10" barclass="tabsbar" >
      <ptabpane text="one">
        <text>one</text>
      </ptabpane>
      <ptabpane text="two">
	<text>two</text>
      </ptabpane>
      <ptabpane text="three">
	<text>three</text>
      </ptabpane>
    </tabs>
  </view>
</canvas>