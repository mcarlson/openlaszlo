<canvas debug="true">

    <debug y="200"/>
    
    <dataset name="ds">
        <ketchup value="red"/>
        <mustard value="yellow"/>
        <vinegar value="green"/>
        <salsa value="red"/>
        <ranch value="white"/>
    </dataset>
    
    <simplelayout axis="y" spacing="20"/>
    
    <view bgcolor="0xC0C0C0">
        <simplelayout axis="x" spacing="5" />
        <view>
            <list x="5" y="5" width="130" shownitems="4" dataoption="lazy">
                <textlistitem value="$path{'@value'}" text="$path{'name()'}"> 
                    <datapath xpath="ds:/*" replication="lazy"/>
                    <method event="onselected">
                        if (selected) 
                        {
                            debug.write('removing ' + this.text)
                            ds.removeChild( datapath.p);
                        }
                    </method>
                </textlistitem>
            </list>
        </view>
        <view name="add" y="5">
            <simplelayout axis="y" spacing="1" />
            <view>
                <text text="value" width="60"/>
                <edittext id="val"/>
                <simplelayout axis="x"/>
            </view>
            <view>
                <text text="label" width="60"/>
                <edittext id="txt"/>
                <simplelayout axis="x"/>
            </view>
            <button name="add" x="$once{parent.width - this.width}" width="50" 
                onclick="ds.getPointer().addNode(txt.text, null, {value: val.text})">
                add
            </button>
        </view>
    </view>
    <tabs>
        <tabpane>
            <datapath pooling="true" xpath="ds:/*/name()">
                <attribute name="datacontrolsvisibility" value="false"/>
            </datapath>
            <text datapath="@value"/>
        </tabpane>
    </tabs>
    <tabslider height="200" width="130">
        <tabelement> 
            <text datapath="@value"/>
            <datapath xpath="ds:/*/name()" pooling="true"/>
        </tabelement>
    </tabslider>
