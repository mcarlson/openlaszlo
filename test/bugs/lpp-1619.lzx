<canvas>

<view name="v" x="20" y="20" width="100" height="100" bgcolor="0x7F7F7F" focusable="true">
    <method event="onkeyup" args="kc">
        Debug.write("got onkeyup: ", kc); 
    </method>
    
    <method event="oninit">
        Debug.write("init called."); 
        this._del = new LzDelegate(this, "myCallback"); 
        LzKeys.callOnKeyCombo(_del, ["c"]);  // this works
        LzKeys.callOnKeyCombo(_del, ["shift", "b"]);  // this works
        LzKeys.callOnKeyCombo(_del, ["control", "g"]); // this works
        LzKeys.callOnKeyCombo(_del, ["control", "a"]); // this does not work!
    </method>
    
    <method name="myCallback">
        Debug.write("myCallback called."); 
    </method>
</view>

<button y="350">something else to focus on</button>
<button y="380">something else to focus on</button>

</canvas>

