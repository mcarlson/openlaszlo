<canvas debug="true">
    <simplelayout axis="x" spacing="5" />
    <view name="display" layout="axis: y; spacing: 10">
        <list x="5" y="5" width="130" shownitems="4" name="mylst">
            <textlistitem text="ketchup" value="red"/>
            <textlistitem text="mustard" value="yellow"/>
            <textlistitem text="vinegar" value="green"/>
            <textlistitem text="salsa" value="red"/>
            <textlistitem text="ranch" value="white"/>
        </list>
        <button text="remove selected">
            <method event="onclick">
                with (parent.mylst)
                {
                    removeItem(getValue())
                }
            </method>
        </button>
    </view>
    <view name="add" y="5">
        <simplelayout axis="y" spacing="1" />
        <view>
            <text text="value" width="60"/>
            <edittext id="val"/>
            <simplelayout axis="x"/>
        </view>
        <view>
            <text text="label" width="60"/>
            <edittext id="txt"/>
            <simplelayout axis="x"/>
        </view>
        <button name="add" x="$once{parent.width - this.width}" width="50" 
            onclick="canvas.display.mylst.addItem(txt.text, val.text)">
            add
        </button>
    </view>
