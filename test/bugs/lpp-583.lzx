<canvas>

    <!-- this bug shows that replication will not respect lexical order when local
         and serverside data is mixed. The first view will be place in correct order
         with respect to the local datasets and the other replicated views will not.  -->

    <!-- DATA SOURCE -->
    <dataset name="weatherdata"
             src="http://www.laszlosystems.com/cgi-pub/weather.cgi"/>

    <dataset name="items">
        <item value="item1" >item one</item>
        <item value="item2" >item two</item>
        <item value="item3" >item three</item>
        <item value="item4" >item four</item>
    </dataset>

    <class name="colorlabel"  width="100" height="15">
        <attribute name="text" type="string" />
        <text text="${parent.text}" />
    </class>

   <view>
        <colorlabel text="localdata" bgcolor="red"  datapath="items:/item"/>
        <colorlabel text="serverdata" x="10" id="tester" bgcolor="yellow"  datapath="weatherdata:/weather[1]/forecast[1]/day"/>
        <colorlabel text="localdata" bgcolor="green"  />
        <simplelayout spacing="5" />
   </view>

    <method event="oninit">
        tester.datapath.getDataset().setQueryString({zip:  94121});
        tester.datapath.getDataset().doRequest();
    </method>
