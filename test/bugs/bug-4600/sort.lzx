<canvas width="800" height="500" layout="axis:y">
    <debug x="200" height="400"/>
    <dataset name="contactdata" src="contactdata.xml"/>

    <checkbox id="order">ascending</checkbox>
    <view datapath="contactdata:/contacts" layout="axis:y">
        <view id="r" layout="axis:x; spacing:4"
            bgcolor="yellow" width="200" height="20">
            <datapath xpath="person" sortpath="@lastname"
                sortorder="${order.value ? 'ascending' : 'descending'"/>
            <text datapath="@firstname" resize="true"/>
            <text datapath="@lastname" resize="true"/>
        </view>
    </view>
</canvas>

