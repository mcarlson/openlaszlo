<canvas>
    <view name="redbox" width="10" height="10" bgcolor="red" >
        <animatorgroup name="fadeOut" process="sequential" start="false">
            <animator attribute="opacity" from="1" to=".5" duration="1000"/>
            <animator attribute="visible" to="false" />
        </animatorgroup>
    </view>

    <button text="go away" onclick="canvas.redbox.fadeOut.doStart()" />
    <simplelayout axis="y" spacing="10" />
