<canvas>


    <simplelayout spacing="5"/>
    <view>
        <simplelayout spacing="5"/>
        <button onclick="details.doFocus()">Go to Details</button>
        <button>Nothing</button>
        <radiogroup>
            <radiobutton>one</radiobutton>
            <radiobutton>two</radiobutton>
            <radiobutton>three</radiobutton>
        </radiogroup>
        <button>Nothing</button>
    </view>
    <view id="details" bgcolor="silver">
        <method name="doFocus">
            LzFocus.setFocus(this.sbox.contents.general.firstname);
