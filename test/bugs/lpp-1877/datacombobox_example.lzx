<canvas debug="true">

    <dataset name="ds" src="data_sample.xml" />

    <view align="center">
        <simplelayout axis="y" spacing="30" />

        <text>With valuedatapath</text>
        <view>
            <datacombobox id="dBoxOne" 
                        itemdatapath="ds:/networks/network"
                        textdatapath="name/text()"
                        valuedatapath="@id">
                <method event="onselect">
                    Debug.write( "onselect sent",this.selected );
                </method>
            </datacombobox>
        </view>

        <text>Without valuedatapath</text>
        <view>
            <datacombobox id="dBoxTwo" 
                        itemdatapath="ds:/networks/network"
                        textdatapath="name/text()">
                <method event="onselect">
                    Debug.write( "onselect sent",this.selected );
                </method>
            </datacombobox>
        </view>
    </view>

</canvas>
