<canvas debug="true">
  <include href="lzunit"/>

  <class name="foo" bgcolor="silver" width="100" height="100">
    <attribute name="defaultplacement" value="content" type="string"/>
    <view name="content" bgcolor="yellow" x="20" y="20" width="60" height="60"/>
    <state apply="true">
      <view width="10" height="10" bgcolor="red"/>
    </state>
  </class>

  <TestSuite>
    <TestCase>
    
      <foo name="f"/>
      
      <method name="testPlacement">
        Debug.write(f);
        assertEquals(2, f.subviews.length);
        assertEquals(0, f.content.subviews.length);
      </method>
      
    </TestCase>
  </TestSuite>
</canvas>
