<canvas debug="true" width="1000">

    <debug x="500" height="365" />

    <view x="25" layout="spacing: 10">

        <attribute name="longString" value="" type="string" />

        <attribute name="strWithNewLine" value="01abcdefghijklmnopqrstuvwxyz0123456789
02abcdefghijklmnopqrstuvwxyz0123456789
03abcdefghijklmnopqrstuvwxyz0123456789
04abcdefghijklmnopqrstuvwxyz0123456789
05abcdefghijklmnopqrstuvwxyz0123456789
06abcdefghijklmnopqrstuvwxyz0123456789
07abcdefghijklmnopqrstuvwxyz0123456789
08abcdefghijklmnopqrstuvwxyz0123456789
09abcdefghijklmnopqrstuvwxyz0123456789
10abcdefghijklmnopqrstuvwxyz0123456789
" type="string" />

        <text text="----- case 1 -----" fgcolor="red" />

        <text text="$once{ parent.longString }" width="400" multiline="true">
            <method event="oninit">
                Debug.write('----- case 1 -----');
                Debug.write('[long string is truncated]');
                Debug.write('');
                Debug.write(parent.longString);
                Debug.write('');
            </method>
        </text>

        <text fgcolor="red" text="----- case 2 -----" />

        <text text="$once{ parent.strWithNewLine }" width="400" multiline="true">
            <method event="oninit">
                Debug.write('----- case 2 -----');
                Debug.write('[new lines to spaces and string is truncated]');
                Debug.write('');
                Debug.write(parent.strWithNewLine);
                Debug.write('');
            </method>
        </text>

    </view>

</canvas>
