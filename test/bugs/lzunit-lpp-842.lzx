<canvas debug="true">
  <include href="lzunit"/>

  <dataset name="dsTest">
    <root>
      <one/> <two/> <three/> <four/> <five/>
      <six/> <seven/> <eight/> <nine/> <ten/>
    </root>
  </dataset>

  <class name="mwindow" extends="window" resizable="true">
    <view name="main">
    </view>
    <scrollbar/>
  </class>

  <TestSuite>
    <TestCase name="LPP-842">
      <mwindow name="mw" width="100" height="100">
        <text placement="main">
          <datapath xpath="dsTest:/root/*/name()" replication="lazy"/>
        </text>
      </mwindow>
  
      <method name="testPlacement">
        assertTrue(mw.main.subviews.length > 0);
        Debug.write(mw.main.subviews[0]);
        assertEquals("one", mw.main.subviews[0].data);
      </method>
    </TestCase>
    
    
  </TestSuite>
</canvas>
