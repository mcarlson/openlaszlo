<canvas debug="true">
    <dataset name="ds">
		<record/>
		<record/>
		<record/>
		<record/>
    </dataset>

    <simplelayout/>
    <button>Delete it
        <method event="onclick">
            Debug.write( "WAS: " + rootview.subviews)
            rootview.datapath.deleteNode();
            Debug.write( "NOW: " + rootview.subviews)
        </method>
    </button>

    <view name="rootview" layout="axis:'x'" datapath="ds:/">
        <text datapath="record/position()"/>
    </view>

