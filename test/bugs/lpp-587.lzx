<!-- should get no compiler errors here due to whitespace in constraint patterns-->
<canvas width="100%" height="80%" debug="true">
  <debug  fontsize="12"/>

  <view height="150">
    <simplelayout axis="x" spacing="3"/>
    <view id="v1"  bgcolor="olive" height=" ${parent.height-50} " width="50" /> 

    <view id="v2" bgcolor="red" height=" ${parent.height-50}" width="50"  /> 

    <view id="v3" bgcolor="yellow" height="${parent.height-50} " width="50" /> 

    <view id="v4"  bgcolor="olive" height=" $once{parent.height-50} " width="50" /> 

    <view id="v5"  bgcolor="red" height=" $immediately{25 + 25 + 25 + 25} " width="50" /> 

    <view id="v6"  bgcolor="yellow" height="   $always {parent.height-50} " width="50" /> 

    <view id="v7" bgcolor="olive" height="$ {parent.height-50} " width="50" /> 

    <view id="v8"  bgcolor="red" height="$once {parent.height-50} " width="50" /> 

  </view>
  
</canvas>
