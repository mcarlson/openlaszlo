<canvas width="100%" height="100%" debug="true">

  <!-- Copyright 2006 -->

  <script>LzLoader.__LZmonitorState = true</script>



   <resource name="compiled" src="d_c_train_lzx.jpg"/>



   <simplelayout axis="y" spacing="10"/>

   <view name="imageView" width="200" height="80" 
         resource="compiled">
      <method event="onload">
         Debug.write( "onload sent", this );
      </method>
      <method event="onerror">
         Debug.write( "onerror sent", this );
      </method>
   </view>
   <view name="stretchimageView" width="200" height="80" 
         stretches="both" resource="compiled">
      <method event="onload">
         Debug.write( "onload sent", this );
      </method>
      <method event="onerror">
         Debug.write( "onerror sent", this );
      </method>
   </view>
   <view name="noimageView" width="200" height="80">
      <method event="onload">
         Debug.write( "onload sent", this );
      </method>
      <method event="onerror">
         Debug.write( "onerror sent", this );
      </method>
   </view>
   <view name="stretchnoimageView" width="200" height="80"
         stretches="both">
      <method event="onload">
         Debug.write( "onload sent", this );
      </method>
      <method event="onerror">
         Debug.write( "onerror sent", this );
      </method>
   </view>
   <button>Load progress animation via http url
      <method event="onclick">
         Debug.write( "Setting..." );
         parent.imageView.setSource( "progress.swf" );
         parent.stretchimageView.setSource( "progress.swf" );
         parent.noimageView.setSource( "progress.swf" );
         parent.stretchnoimageView.setSource( "progress.swf" );
      </method>
   </button>
   <button>Load static resource
      <method event="onclick">
         Debug.write( "Setting static resource" );
         parent.imageView.setResource( "compiled" );
         parent.stretchimageView.setResource( "compiled" );
         parent.noimageView.setResource( "compiled" );
         parent.stretchnoimageView.setResource( "compiled" );
      </method>
   </button>
</canvas>
