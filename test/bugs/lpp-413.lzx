<canvas>
<dataset name="ds">
    <data>
    <item text="Test" default="true">value</item>
    </data>
</dataset>

<simplelayout/>
<list id="list1" datapath="ds:/data" dataoption="lazy">
    <textlistitem datapath="item" text="$path{'@text'}"/>
        <method name="edit">
            Debug.write("beginning to edit list");

            this.datapath.setPointer(this.datapath.p.cloneNode(true));
        </method>
</list>

<button text="edit" onclick="list1.edit()"/>
<button text="delete selection">
    <method event= "onclick">
        list1.datapath.p.removeChild(list1.getSelection().p);
        
    </method>
</button>
<button text="serialize" onclick="Debug.write(list1.datapath.serialize(), list1.datapath)"/>
</canvas>
