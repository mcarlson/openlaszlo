<canvas debug="true" >

    <debug y="300"/>

    <dataset name="customtextandvalue">
        <item>
           <text>ctv one</text>
           <value>1111</value>
        </item>
        <item>
           <text>ctv two</text>
           <value>2222</value>
        </item>
        <item>
           <text>ctv three</text>
           <value>3333</value>
        </item>
    </dataset>

    <view name="display">
        <list x="5" y="5" width="130" >
            <textlistitem datapath="customtextandvalue:/item" 
                      text="$path{'text/text()'}"
                      value="$path{'value/text()'}">
                <method event="onselected">
                    if (selected) this.datapath.deleteNode();
                </method>
            </textlistitem>
        </list>
    </view>
</canvas>

