<canvas>
    <dataset name="mydata">
        <item>one</item>
        <item>two</item>
        <item>three</item>
        <item>four</item>
        <item>five</item>
        <item>six</item>
        <item>seven</item>
        <item>eight</item>
        <item>nine</item>
        <item>ten</item>
    </dataset>

    <view id="c" height="80" clip="true">
        <view>
            <view>
                <datapath xpath="mydata:/item" replication="resize"/>
                <method event="ondata" args="d"> <![CDATA[
                    Debug.write('ondata', this, this.clonenumber, d );
                    if (this['clonenumber'] && this.clonenumber % 2 == 1) {
                        setAttribute("bgcolor",0xe8e7e7);
                    } else {
                        setAttribute("bgcolor",0xffffff);
                    }
                    ]]>
                </method>
                <text datapath="text()"/>
            </view>
        </view>
        <vscrollbar/>
    </view>
</canvas>