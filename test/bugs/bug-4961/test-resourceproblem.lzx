    <view height="100" clip="true">
        <view>
            <simplelayout axis="y"/>
            <view >
                <datapath xpath="items:/item" replication="lazy"/>
                <simplelayout axis="x"/>
                <view name="bug" resource="resource2" datapath="@status" >
                    <method event="ondata" args="d">
                        if (d == null) return;
                        this.setAttribute("frame", Number(d));
                        debug.write(parent.datapath.p.attributes.name + "-> " + d, this.frame);

                    </method>
                </view>
                <text name="label" datapath="@name"/>
            </view>

        </view>
        <scrollbar/>
    </view>
</canvas>


