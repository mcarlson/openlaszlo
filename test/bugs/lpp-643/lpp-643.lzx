<canvas debug="true">
  <resource name="stopbtn" src="stop_old.png"/>
  <debug y="10%" height="85%" />
  <simplelayout/>
  <view id="v4" resource="${this.zot}" visible="true" >
    <attribute name="zot" value="empty" type="string"/>
    <method event="oninit" args="o">
      // Monitor loader state
      LzLoadQueue.__LZmonitorState = true; LzLoader.__LZmonitorState = true;
      LzLoadQueue.__LZinit();
      // Start a media loader
      Debug.write( 'setSource http');
      this.setSource('http:foo/bar.bletch');
      // Override that, noticing that the loader never recovers
      Debug.write( 'setResource empty');
      this.setAttribute('zot', "empty");
    </method>
    <method event="onload">
      Debug.error("%w.onload", this);
    </method>
    <method event="onerror">
      Debug.error("%w.onerror", this);
    </method>
    <method event="ontimeout">
      Debug.error("%w.timeout", this);
    </method>
  </view>
  <button onclick="v4.setAttribute('zot', 'http:bunk.url/bad')">setResource bad URL</button>
  <button onclick="v4.setSource('http:bunk.source.url/bad')">setSource bad URL</button>
  <button onclick="v4.setSource('http:logo.jpg')">setSource jpg</button>
  <button onclick="v4.setSource('http:jfk.swf')">setSource swf</button>
  <button onclick="v4.setSource('http:tiphop2.mp3')">setSource mp3</button>
  <button onclick="v4.setAttribute('zot', 'empty')">setResource empty</button>
  <button onclick="v4.setAttribute('zot', 'bogus')">setResource bogus</button>
  <button onclick="v4.setAttribute('zot', 'stopbtn')">setResource good</button>
</canvas>
