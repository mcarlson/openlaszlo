
<canvas width="600" height="206" bgcolor="0xeaeaea" >

    <!-- Removing splash tag worksaround the bug -->
    <splash/>

    <button id="bad" onclick="results1.doit()" >Bug</button>
    <view id="results1" x="0" bgcolor="#787878" visible="false" >
        <method name="doit">
            if (this.getAttribute('visible') == false) {
                // Comment out line below and uncomment bringToFront
                // to work around bug
                this.sendToBack();
                //results1.bringToFront();

                this.setAttribute('x', 0);
                this.setAttribute('visible', true);
                this.animate('x', bad.width, 1000, false);
            }
        </method>
        <!--  this view doesn't show up if splash is present -->
        <view id="missing" height="20" bgcolor="red" >
            <text>Where am I?</text>
        </view>
    </view>
</canvas>
