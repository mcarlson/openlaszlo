<canvas debug="true">
    <dataset name="ds">
        <item attr1="a1" attr2="a2">
           <text>ctv one</text>
           <value>1111</value>
        </item>
        <item>
           <text>ctv two</text>
           <value>2222</value>
        </item>
        <item>
           <text>ctv three</text>
           <value>3333</value>
        </item>
    </dataset>

    <view>
        <datapath xpath="${'ds:/item[' + parent.holder.et.text + ']'}" >
            <attribute name="datacontrolsvisibility" value="false"/>
        </datapath>

        <simplelayout spacing="4"/>

        <view name="holder">
            <simplelayout axis="x"/>
            <text>Record Number:</text>
            <edittext width="40" name="et">1
                <method event="onkeyup" args="k">
                    if ( k == 13 ){
                        this.updateText();
                    }
                </method>
            </edittext>
        </view>

        <view>
            <simplelayout axis="x"/>
            <text width="60">Text:</text>
            <edittext datapath="text/text()"></edittext>
        </view>
        <view>
            <simplelayout axis="x"/>
            <text width="60">Value:</text>
            <edittext datapath="value/text()"/>
        </view>
        <view width="300" fgcolor="green">
            <datapath xpath="value">
                <attribute name="datacontrolsvisibility" value="false"/>
            </datapath>
            <simplelayout axis="x"/>
            <text resize="true">This is always visible</text>
            <text resize="true" text="$path{'text()'}"/>
        </view>
    </view>
