<canvas debug="true">
  <include href="utils/layouts/simpleboundslayout.lzx"/>

  <simplelayout axis="y" spacing="10"/>

<!-- simplelayout. No changes, but for reference only -->
  <view name="view1">
    <simplelayout axis="x" spacing="5"/>
    <view name="container" bgcolor="yellow" width="300" height="100">
      <view name="v1" bgcolor="red" width="50" height="50"/>
      <view name="v2" bgcolor="blue" width="50" height="50"/>
      <view name="v3" bgcolor="green" width="50" height="50"/>
      <view name="v4" bgcolor="red" width="50" height="50"/>
      <simplelayout name="sl1" axis="x"/>
    </view>
    <button onclick="view1.container.v3.setVisible (!view1.container.v3.visible)">simplelayout:Toggle green box</button>
  </view>

<!-- simpleboundslayout -->
  <view name="view2">
    <simplelayout axis="x" spacing="5"/>
    <view name="container" bgcolor="yellow" width="300" height="100">
      <view name="v1" bgcolor="red" width="50" height="50"/>
      <view name="v2" bgcolor="green" width="50" height="50" rotation="45"/>
      <view name="v3" bgcolor="blue" width="50" height="50"/>
      <simpleboundslayout name="sbl1" axis="x"/>
    </view>
    <button onclick="view2.container.v2.setVisible (!view2.container.v2.visible)">simpleboundslayout:Toggle green box</button>
  </view>

<!-- resizelayout -->
  <view name="view3">
    <simplelayout axis="x" spacing="5"/>
    <view name="container" bgcolor="yellow" width="300" height="100">
      <view name="v1" bgcolor="red" width="50" height="50"/>
      <view name="v2" bgcolor="blue" width="50" height="50" options="releasetolayout"/>
      <view name="v3" bgcolor="green" width="50" height="50" options="releasetolayout"/>
      <view name="v4" bgcolor="red" width="50" height="50"/>
      <resizelayout name="rl1" axis="x" spacing="5"/>
    </view>
    <button onclick="view3.container.v3.setVisible (!view3.container.v3.visible)">resizelayout:Toggle green box</button>
  </view>

<!-- wrappinglayout -->
  <view name="view4">
    <simplelayout axis="x" spacing="5"/>
    <view name="container" bgcolor="yellow" width="310" height="100">
      <view name="v1" bgcolor="red" width="100" height="50"/>
      <view name="v2" bgcolor="blue" width="100" height="50"/>
      <view name="v3" bgcolor="green" width="100" height="50"/>
      <view name="v4" bgcolor="red" width="100" height="50"/>
      <wrappinglayout name="wl1" axis="x" spacing="5"/>
    </view>
    <button onclick="view4.container.v3.setVisible (!view4.container.v3.visible)">wrappinglayout:Toggle green box</button>
  </view>


