<canvas width="1000">
   <debug y="50" height="200"/>
   <dataset name="ds_testdata">
      <mynode id="1">      
         <mynode id="2" value="two"/>
         <mynode id="3">
            <mynode id="4"/>
         </mynode>         
      </mynode>
    </dataset>
    
    
    <simplelayout axis="y" />
    <button text="Add Node From Pointer">
      <method event="onclick">
         var dpSource = ds_testdata.getPointer();
         dpSource.selectChild(2);
         dpSource.selectNext(2);
         var dpTarget = ds_testdata.getPointer();
         dpTarget.selectChild(1);
         debug.write("Add source node: " + dpSource.getNodeAttribute("id") 
                     + " to target node: " + dpTarget.getNodeAttribute("id"))
         
         debug.write("dpTarget was" + dpTarget.serialize() );           //not null, but...
         var dpNewNode = dpTarget.addNodeFromPointer(dpSource);            //dpNewNode should point to new node
         debug.write("dpTarget now" + dpTarget.serialize() );           //not null, but...

         debug.write("dpNewNode:" + dpNewNode );           //not null, but...
         debug.write("dpNewNode.p:" + dpNewNode.p );           //not null, but...
         
         var dpCheck = ds_testdata.getPointer();
         dpCheck.selectChild(2);
         dpCheck.selectNext(2);                                            //points at newNode
         debug.write("target node child [2]:" + dpCheck.serialize());      //node is there with data.
         
      </method>   
    </button>
</canvas>


