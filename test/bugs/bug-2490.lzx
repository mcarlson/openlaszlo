<canvas width="640" height="480" debug="true">
	<include href="lzunit"/>

	<dataset name="bug2490">
		<one>lowercase</one>
		<two>UPPERCASE</two>
	</dataset>
	<debug y="100"/>
	<datapointer id="root" xpath="bug2490:/"/>
	
	<class name="bug-2490" extends="TestCase">
		<datapath name="dpath" xpath="bug2490:/"/>
		<method name="testGetXpath">
			ptr = this.dpath.getXpath('one')
			AssertEquals('lowercase', ptr.getNodeText())
		</method>

		<method name="testXpathQuery">
			ptr = this.dpath.xpathQuery('one')
			AssertEquals('lowercase', ptr.getNodeText())
		</method>

		<method name="testDPxpq">
			ptr = root.xpathQuery('two')
			AssertEquals('UPPERCASE', ptr.getNodeText())
		</method>
	</class>
	
	<TestSuite>
		<bug-2490/>
	</TestSuite>
