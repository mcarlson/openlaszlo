<!-- This should be smaller than when inline-only="false".  Each button should print text that matches its label to the debugger. -->

<canvas debug="true">
  <?lzc classes="c1 c2" inline-only="true"?>
  
  <debug x="100"/>
  
  <class name="c1">
    <simplelayout axis="y"/>
    <method name="f">Debug.write("c1")</method>
    <view>
      <button onclick="classroot.f()">c1</button>
    </view>
  </class>
  
  <class name="c2">
    <method name="f">Debug.write("c2")</method>
    <c1>
      <button onclick="classroot.f()">c2</button>
    </c1>
  </class>
  
  <c2/>
