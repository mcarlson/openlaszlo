<!-- This tests that children of a subclass of state have the right classroot -->

<canvas debug="true">
  <?lzc class="c1" inline-only="true"?>
  
  <class name="stateSubclass" extends="state"/>
  
  <class name="c1">
    <method name="f">Debug.write('click')</method>
    
    <stateSubclass apply="true">
      <button onclick="classroot.f()">Click</button>
    </stateSubclass>
  </class>
  
  <c1/>
