<canvas debug="true">

  <window x="20" y="20" width="400" height="300"
           resizable="true" bgcolor="0xc0c0c0" 
           title="Combobox Test">
           
    <text fgcolor="0xffffff" width="100%" multiline="true">
        Shrink the window with a long item selected in teh 2nd or third
        comboboxes.
    </text>
    <view align="center" valign="middle" bgcolor="yellow" 
          width="${immediateparent.width - 100}" 
          height="${immediateparent.height - 50}"  >
                    
            <view align="center" valign="middle" width="${immediateparent.width - 20}" 
                        height="${immediateparent.height - 20}">
                <simplelayout axis="y" spacing="5"/>
                
                <text text="width='250'" />
                
                <combobox width="250" bgcolor="white" editable="false">
                    <textlistitem text="Chinese (simple)" />
                    <textlistitem text="Chinese (traditional)"/>
                    <textlistitem text="English" selected="true"/>
                    <textlistitem text="German"/>
                    <textlistitem text="Japanese"/>
                    <textlistitem text="Russian"/>
                    <textlistitem text="Spanish"/>
                    <textlistitem text="A very long entry in the combobox."/>
                </combobox>
                
                <text text="width=${immediateparent.width}'" />
                
                <combobox width="${immediateparent.width}" bgcolor="white" editable="false">
                    <textlistitem text="Chinese (simple)" />
                    <textlistitem text="Chinese (traditional)"/>
                    <textlistitem text="English" selected="true"/>
                    <textlistitem text="German"/>
                    <textlistitem text="Japanese"/>
                    <textlistitem text="Russian"/>
                    <textlistitem text="Spanish"/>
                    <textlistitem text="A very long entry in the combobox."/>
                </combobox>
                
                <text text="width=${parent.width}'" />
                
                <combobox width="${parent.width}" bgcolor="white" editable="false">
                    <textlistitem text="Chinese (simple)" />
                    <textlistitem text="Chinese (traditional)"/>
                    <textlistitem text="English" selected="true"/>
                    <textlistitem text="German"/>
                    <textlistitem text="Japanese"/>
                    <textlistitem text="Russian"/>
                    <textlistitem text="Spanish"/>
                    <textlistitem text="A very long entry in the combobox."/>
                </combobox>
            </view>
    </view>
  </window>
</canvas>


