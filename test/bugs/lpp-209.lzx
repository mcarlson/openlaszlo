<canvas width="1200" height="800" debug="true">
  <dataset name="daily_data">
    <menu>
      <ditem text="Entertainment News" bgcolor="0x0000ff" />           
      <ditem text="World News"         bgcolor="red" />
      <ditem text="Sports News"        bgcolor="silver" />
    </menu>
  </dataset>  

  <simplelayout/>
  <view width="100" height="40" datapath="daily_data:/menu">
    <simplelayout/>
    <text datapath="*" text="$path{'@text'}"  bgcolor="$path{'@bgcolor'}"/>
  </view>

</canvas>


