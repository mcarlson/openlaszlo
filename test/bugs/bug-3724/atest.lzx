<canvas> 

    <view id="target" 
          x="0" 
          y="0" 
          width="50" 
          height="50"
          stretches="both"
          resource="ca.swf"> 
        <animatorgroup name="zoomin"
                       start="false"
                       process="simultaneous"> 
            <animator attribute="width"
                      to="200"
                      duration="1000"/>
            <animator attribute="height"
                      to="200"
                      duration="1000"/> 
            <animator attribute="x"
                      to="200"
                      duration="1000"/> 
        </animatorgroup> 

        <animatorgroup name="zoomout"
                       start="false"
                       process="simultaneous"> 
            <animator attribute="width"
                      to="50"
                      duration="1000"/>
            <animator attribute="height"
                      to="50"
                      duration="1000"/> 
            <animator attribute="x"
                      to="0"
                      duration="1000"/> 
        </animatorgroup> 


        <animatorgroup name="pan"
                       start="false"
                       process="simultaneous">
            <animator attribute="x"
                      duration="4000"
                      to="1000"/>
            <animator attribute="y"
                      duration="4000"
                      to="1000"/> 
        </animatorgroup>

            <animator name="anix"
                      attribute="x"
                      duration="4000"
                      to="1000"
                      start="false"/>
            <animator name="aniy"
                      attribute="y"
                      duration="4000"
                      to="1000"
                      start="false"/> 




    </view>

     
    <button text="zoomin" 
            onclick="target.zoomin.doStart()"/>
    <button text="zoomout" 
            onclick="target.zoomout.doStart()"/>
    <button text="pan with animatorgroup" 
            onmousedown="target.pan.doStart()"
            onmouseup="target.pan.stop()" />
    <button text="pan with two animators" 
            onmousedown="target.anix.doStart();target.aniy.doStart()"
            onmouseup="target.anix.stop();target.aniy.stop()" /> 

    <simplelayout axis="y"/>

</canvas>
