<canvas height="500">
    <dataset name="ds">
        <node c="255"/>
    </dataset>

    <button onclick="ds.getPointer().addNode( 'node' , null , { c : 255} )">Add new node</button>
    <view  width="100" height="10">
        <datapath xpath="ds:/*" pooling="true" />
        <attribute name="bgcolor" 
                   value="${Number( this.datapath.getXPath( '@c' ))}"/>
    </view>
    
    <window width="100" height="50"/>
    <simplelayout spacing="10"/>
