<canvas>
    <include href="lz/window.lzx"/>
    <debug x="300"/>
	<resource name="add_media">
    		<frame src="resources/add_media_down.swf" />
    		<frame src="resources/add_media_over.swf" />
    		<frame src="resources/add_media.swf" />
  	</resource>
	<alert name="myalert">
        	Danger! Danger!
    	</alert>
	<alert name="test2">
        <button>mode to middle
            <method event="onmousedown">
                LzModeManager.makeModal( parent.submode );
            </method>
        </button>
        <view name="submode">
            <button>release
            <method event="onclick">
                LzModeManager.release( parent );
            </method>
            </button>
        </view>
        <button>not me </button>
        <simplelayout/>
    </alert>

	<basebutton resource="add_media">
		<method event="onclick">
		canvas.myalert.open();
		</method>
	</basebutton>
	<button y="100">
		<method event="onclick">
		  canvas.myalert.open();
		</method>
    </button>
	<button y="150" enabled="${chequer.value}"> funky test
		<method event="onclick">
		  canvas.test2.open();
		</method>
	</button>

    <checkbox name="chequer" value="true" y="180">funky enabled</checkbox>

</canvas>
