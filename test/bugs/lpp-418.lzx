<canvas >
   <include href="base/basebuttonrepeater.lzx" />
  <debug y="100" height="300"/>
  <simplelayout inset="10" spacing="10"/>
  <basebuttonrepeater bgcolor="red" width="100" height="40">
    <method event="onmousedown"> <![CDATA[
        out.write('----> onmousedown');

        // busy loop
        for (var i=0; i < 900000; i++) ;
        ]]>
    </method>
    <method event="onmousestilldown">
        out.write('----> onmousestilldown');
    </method>
    <method event="onmouseup">
        out.write('----> onmouseup');
    </method>
  </basebuttonrepeater>
  <basebuttonrepeater bgcolor="green" width="100" height="40">
    <method event="onmousedown"> <![CDATA[
        out.write('----> onmousedown');
        ]]>
    </method>
    <method event="onmousestilldown">
        out.write('----> onmousestilldown');
    </method>
    <method event="onmouseup">
        out.write('----> onmouseup');
    </method>
  </basebuttonrepeater>
  <text selectable="true" name="out" resize="true" multiline="true" width="300">
     <method name="write" args="t">
        this.setText(this.getText() + "\r" + t);
     </method>
  </text>
</canvas>
