<canvas debug="true">
    <dataset name="testdata">
        <tagA/>
        <tagA/>
        <tagB/>
        <tagB/>
        <tagB/>
        <tagB/>
    </dataset>
    <simplelayout spacing="5" />
    <text>Click lines for debug out of position() and getNodeOffset()</text>
    <view datapath="testdata:/*">
        <view>
            <method event="onclick">
                debug.write(' serialize: '+parent.datapath.serialize());
                debug.write(' position(): '+parent.datapath.xpathquery( 'position()' ) );
                debug.write(' getNodeOffset():'+parent.datapath.getNodeOffset() );
            </method>
            <simplelayout axis="x"/>
            <text datapath="position()"/>
            <text datapath="name()"/>
            <text datapath="text()"/>
        </view>
    </view>
