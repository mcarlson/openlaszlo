<canvas debug="true">
	<debug y="250"/>
	<simplelayout spacing="10"/>
	<view name="tarea" width="200" height="100" bgcolor="blue" y="50" onclick="oc()">

		<text name="msg" fgcolor="0xfffff" label="Mouse event tester" resize="true" valign="middle" align="center"/>

		<method event="onmouseover">
			this.m_over.sendEvent()
		</method>

		<method name="on_over" event="m_over">
			debug.write("Moused over!")
			this.setBGColor(bgcolor &lt;&lt; 7)
		</method>
		
		<method event="onmouseout">
			this.m_out.sendEvent()
		</method>
		<method name="on_out" event="m_out">
			this.setBGColor(bgcolor &gt;&gt; 7)
		</method>
		<method name="oc">
			m_over.removeDelegate(on_over)
			m_out.removeDelegate(on_out)
			debug.write("Done with mouseover/out")
		</method>

	</view>
	
	<text>Click inside the box to stop listening for mouseover/mouseout events</text>
