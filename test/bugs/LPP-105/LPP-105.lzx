<canvas bgcolor="#ACACB3" width="840" height="640">

  <debug height="500" width="400"/>
  <dataset name="contactsdata" src="http:test-contactsdata.xml" request="true"/>
  <inittimer/>
  
  <class name="vlist" extends="view" clip="true">
    <attribute name="defaultplacement" type="string" value="content"/>
    <view name="content">
      <!-- this is the defaultplacement view -->
    </view>
    <scrollbar/>
  </class>
  
  <class name="vitem" extends="view" height="50"
    onmouseover="setBGColor(0xaaaadd)" onmouseout="setBGColor(0xcccccc)"
    onclick="setHeight(this.height == 50 ? 100 : 50)">
    <view
      width="142"/>
    
    <method event="ondata" args="d">
      if (d) {
      displayname.setText(d.attributes['firstname'] + ' ' +
      d.attributes['lastname']);
      phone.setText(d.attributes['phone']);
      email.setText(d.attributes['email']);
      }
    </method>
    <view x="3" y="3" bgcolor="yellow" width="6" height="6"/>
    <text x="14" y="1" name="displayname" width="142" fontsize="12"/>
    <text y="20" name="phone" width="142"/>
    <text y="34" name="email" width="142"/>
  </class>

  <!-- this is the desired visual effect -->
  <vlist width="200" height="400" bgcolor="blue">
    <view>
      <vitem>
	<datapath xpath="contactsdata:/contacts/contact" replication="resize"/>
      </vitem>
    </view>
  </vlist>

  <!-- this is the code that should work like the above case  -->  
  <vlist x="210" width="200" height="400" bgcolor="blue">
    <vitem>
      <datapath xpath="contactsdata:/contacts/contact" replication="resize"/>
    </vitem>
  </vlist>

  <!-- just to make sure we didn't break lazy replication -->  
  <vlist x="420" width="200" height="400" bgcolor="blue">
    <vitem>
      <datapath xpath="contactsdata:/contacts/contact" replication="lazy"/>
    </vitem>
  </vlist>

</canvas>
