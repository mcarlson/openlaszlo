<canvas>
	<view width="100" height="100" bgcolor="red"
		onmousedown="ds.apply()"
		onmouseup="ds.remove()"
	>
	
		<dragstate id="ds"/>
		
		<state apply="${ds.isapplied}">
			<text>isapplied</text>
		</state>
		<state apply="${!ds.isapplied}">
			<text>not isapplied</text>
		</state>
	</view>
