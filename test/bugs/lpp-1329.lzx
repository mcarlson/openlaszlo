  <debug  fontsize="12"/> 

  <class name="myclass_no_handler">
    <event name="myevent"/>
  </class>

  <class name="myclass_with_handler">
    <event name="myevent"/>
    <handler name="myevent" args="myargs">
       Debug.write(this, 'handling myevent, myargs=', myargs);
    </handler>
  </class>



  <myclass_no_handler id="foo"/>
  <myclass_with_handler id="bar"/>

   <script>
     Debug.write("foo.myevent (should be null) = ",foo.myevent, typeof(foo.myevent));
     Debug.write("bar.myevent (should be an event) = ",bar.myevent, typeof(bar.myevent));
     bar.myevent.sendEvent('this is bar handling the myevent event');
   </script>
</canvas>
