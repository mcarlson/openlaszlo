<canvas>


    <button text="make me modal">
        <attribute name="isModal" value="false"/>
        <method event="onclick">
            if( !this.isModal ) {
                this.setAttribute('text', 'release from modal' );
                LzModeManager.makeModal( this );
                this.setAttribute('isModal', true );
            } else {
                this.setAttribute('text', 'make me modal');
                LzModeManager.release( this );
                this.setAttribute('isModal', false ); 
            } 
        </method>
    </button>

    <button text="some other button">
        <method event="onmouseover">
            debug.write('some other button got a mouse over');
        </method> 
    </button>

    <simplelayout axis="y"/>


</canvas>
