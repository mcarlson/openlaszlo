<canvas bgcolor="silver">

    <resource name="slow_rsc" src="gripper_dsbl.swf"/>

    <view name="slowness"  resource="slow_rsc" width="200" y="100"/>

    <class name="frametimer" visible="true" initstage="late"
        bgcolor="black" height="${fps_text.height+4}" width="128"
        onmousedown="this.mouseisdown=true"
        onmouseup="this.mouseisdown=false">
        <attribute name="fps" value="0" type="number"/>
        <attribute name="starttime" value="0" type="number"/>
        <attribute name="numframes" value="0" type="number"/>

        <method event="oninit">
            var d = new LzDelegate( this , "tellTime", LzIdle, "onidle" );
            this.bringToFront();
        </method>
        <method name="telltime" args="t">
            this.numframes++;
            if (this.starttime = 0) this.starttime = t;
            var duration = (t - this.starttime) / 1000;;   // in secs
            this.fps = this.numframes / duration
            fps_text.setText( this.fps );
            frames_text.setText( this.numframes );
            if (!this.mouseisdown) time_text.setText( t - this.lasttime );
            this.lasttime = t;
        </method>

        <text id="fps_text" width="40" bgcolor="white"/>
        <text name="frames_text" width="40" bgcolor="white" />
        <text name="time_text" width="40" bgcolor="yellow" />
        <simplelayout axis="x" spacing="2" inset="2"/>
    </class>

    <frametimer id="t" x="100"/>
    <inputtext width="100" bgcolor="white">type text here</inputtext>
