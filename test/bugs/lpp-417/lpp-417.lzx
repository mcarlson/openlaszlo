<canvas bgcolor="#eeeeee" debug="true">

  <debug y="10%" height="75%" />
  
  <simplelayout axis="y" />

  <button onclick="canvas.iservices.gettime.invoke();">Invoke RPC Service</button>

  <text y="5" id="timeBox" resize="true">
    Time goes here
  </text>

  <!-- Global (canvas) methods and RPC -->
  <xmlrpc name="iservices" service="http:iservices.php">

    <method event="onload">
      Debug.write( 'netservice xmlrpc stub loaded');
    </method>

    <method event="onerror" args="error">
      Debug.write( 'error:', error);
    </method>

    <remotecall funcname="gettime">
      <param value="''" />
      <method event="ondata" args="value">
        timeBox.setText(value);
      </method>
    </remotecall>

  </xmlrpc>

</canvas>
