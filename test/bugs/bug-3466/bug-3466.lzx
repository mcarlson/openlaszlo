<canvas>

    <resource name="plusminus">
        <frame src="plus.gif"/>
        <frame src="minus.gif"/>
    </resource>

    <class name="myview">
        <attribute name="myresource" value="plusminus" type="string" />
        <attribute name="isminus" value="true" type="boolean" />
        <view resource="${parent.myresource}" clickable="true">
            <attribute name="frame" value="${ parent.isminus ? 2 : 1 }"/>
        </view>
    </class>

    <!-- This should display a minus, but we get a plus -->
    <myview />

</canvas>
