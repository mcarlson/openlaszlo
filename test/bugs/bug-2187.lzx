<canvas width="600" height="300">
	<view x="100" y="50" width="255" height="100" bgcolor="olive" oninit="this.animate('width', 510, 1000)">
		<view height="${parent.height-50}" width="${parent.width / 2}" align="center">
			<attribute name="bgcolor" value="parent.width - 0xff"/>
		</view>
		
		<view height="30" width="30" valign="middle" >
			<attribute name="bgcolor" value="(parent.width - 0xff) &lt;&lt; 16" when="always"/>
		</view>
	</view>
