<canvas>

    <dataset name="ds">
        <node safesearch="0"/>
    </dataset>

    <view datapath="ds:/node">
        <text>radiogroups should behave the same way and be linked</text>
        <simplelayout spacing="20"/>
        <radiogroup value="$path{'@safesearch'}">
            <method event="onvalue">
                this.datapath.updateData();
            </method>
            <radiobutton value="2" text="Use strict filtering (Filter both explicit text and explicit images)"/>
            <radiobutton value="1" text="Use moderate filtering (Filter explicit images only - default behavior)"/>
            <radiobutton value="0" text="Do not filter my search results."/>
        </radiogroup>

        <radiogroup  datapath="@safesearch">
            <method event="onvalue">
                this.datapath.updateData();
            </method>
            <radiobutton value="2" text="Use strict filtering (Filter both explicit text and explicit images)"/>
            <radiobutton value="1" text="Use moderate filtering (Filter explicit images only - default behavior)"/>
            <radiobutton value="0" text="Do not filter my search results."/>
        </radiogroup>
    </view>
</canvas>
