<canvas proxied="false" bgcolor="#EAEAEA" width="100%" height="100%">
    <resource name="rewind_all" src="icons/rewind_all.png"/>

    <view name="audioview">
        <method event="onerror" args="e">
            Debug.write( 'onerror', e);
        </method>
        <method event="ontimeout" args="e">
            Debug.write( 'ontimeout', e);
        </method>
        <method event="onlastframe" args="e">
            Debug.write( 'onlastframe', e);
            this.stop();
        </method>
    </view>

    <simplelayout axis="x"/>
    <button>Load swf
        <method event="onclick">
            audioview.setSource("blast.swf");
        </method>
    </button>
    <button>Load mp3
        <method event="onclick">
            audioview.setSource("tiphop2.mp3");
        </method>
    </button>
    <button>Set resource
        <method event="onclick">
            audioview.setResource("rewind_all");
        </method>
    </button>
    <button>List mp3 ID3
        <method event="onclick">
            Debug.write( 'id3', audioview.getID3());
        </method>
    </button>

    <button width="40" onclick="audioview.play(0);" >
        <view resource="rewind_all"  y="6" align="center"/>
    </button>
    <button width="40" onclick="audioview.seek( -2 );" >
        <view resource="icons/rewind.png"  y="6" align="center"/>
    </button>        
    <button width="40" onclick="audioview.stop()" >
        <view resource="icons/stop.png"  y="6" align="center"/>
    </button>
    <button width="40" onclick="audioview.play()" >
        <view resource="icons/play.png"  y="5" align="center"/>
    </button>
    <button width="40" onclick="audioview.seek( 2 );" >
        <view resource="icons/fastfwd.png"  y="6" align="center"/>
    </button>
    <text text="${'loadperc ' + audioview.loadperc}"/>
    <text text="${'totalframes ' + audioview.totalframes}"/>
    <text text="${'frame ' + audioview.frame}"/>
    <text width="200" text="${audioview.getCurrentTime() +  ' / ' + audioview.getTotalTime()}"/>
</canvas>
