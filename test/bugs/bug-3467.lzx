<canvas bgcolor="0x00b0b0" height="300">

	<font name="vera" src="bitstream-vera-1.10/vera.ttf"/>

	<dataset name="sizes">
		<size>8</size>
		<size>9</size>
		<size>10</size>
		<size>11</size>
		<size>12</size>
		<size>14</size>
		<size>16</size>
		<size>18</size>
		<size>20</size>
		<size>22</size>
		<size>24</size>
		<size>26</size>
		<size>30</size>
		<size>32</size>
		<size>36</size>
		<size>40</size>
		<size>44</size>
	</dataset>

    <class name="veratest">
    	<attribute name="text" type="text" value="''"/>
    	<text name="msg" text="${parent.text}" bgcolor="yellow" resize="true" font="vera"/>
    	<text name="fn" y="${parent.msg.y + parent.msg.height}" fgcolor="blue" width="${parent.msg.width}"/>
    </class>
    
    <wrappinglayout spacing="10" axis="x"/>
    
    <veratest datapath="sizes:/size">
		<method event="oninit">
			this.msg.setAttribute('fontsize', datapath.getNodeText())
			this.setAttribute('text', "g y j")
			fn.setText(msg.fontsize)
		</method>	
	</veratest>
    		
</canvas>
