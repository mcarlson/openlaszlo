<canvas debug="true">

<include href="incubator/stylishbutton.lzx"/>

<view x="50" y="50" layout="spacing: 10">
    <stylishbutton id="b1" enabled="false" text="b1: before bug fix, this should have been disabled but was not. after bug fix, it is disabled as it should be" />
    <stylishbutton id="b2" enabled="false" text="b2: this is disabled (worked around)">
        <method event="oninit"><![CDATA[
            if (! this.enabled && this.frame != this.disabledResourceNumber) {
            this.setAttribute('frame', this.disabledResourceNumber);
            }
        ]]>
        </method>
    </stylishbutton>
    <stylishbutton enabled="true">i should be enabled</stylishbutton>
    <stylishbutton>i should also be enabled</stylishbutton>
</view>

</canvas>
