<canvas width="500" height="300">
	<view x="100" y="50" width="200" height="100" bgcolor="blue" oninit="this.animate('width', 400, 1000)">
		<!-- There's nothing wrong with the following line, so it should compile -->
		<view bgcolor="olive" height=" ${parent.height-50} " align="center">
			<attribute name="width" value="parent.width/2" when="always"/>
		</view>
	</view>
