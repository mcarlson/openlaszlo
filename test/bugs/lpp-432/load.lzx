<canvas width="100%" height="100%" debug="true">
  <debug  fontsize="12"/>
  <simplelayout/>
  <view resource="file:logo.jpg"/>

  <!--  This test verifies that the "file" type request which was a security hole 
        has been replaced on the server by http requests.

       The logo image should display, and the serialized dataset should print out to the debugger. 

       The "file:" urls will have been transparently converted to 'http' requests by the server.
    -->

  <dataset name="mydata" src="file:foo.xml" request='true' />

  <method event='ondata' reference="mydata">
    Debug.write('mydata', mydata.serialize());
  </method>

</canvas>
