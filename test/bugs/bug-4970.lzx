<canvas debug="true">

    <debug y="100" height="285" width="370" />

    <include href="base/datalistselector.lzx" />

    <dataset name="ds1">
        <item>one</item>
    </dataset>

    <dataset name="ds2">
        <item>one</item>
        <item>two</item>
    </dataset>

    <dataset name="ds3">
        <item>one</item>
        <item>two</item>
    </dataset>

    <class name="test">
        <method event="oninit">
            Debug.write('select item by 0 index:', 
                         sv.selector.getItemByIndex(0));
            Debug.write('select item by 1 index:', 
                         sv.selector.getItemByIndex(1));
            Debug.inspect(this.sv.subnodes);
        </method>
        <view name="sv" layout="axis: y">
            <datalistselector name="selector" />
            <text datapath="item" text="$path{'text()'}" />
        </view>
    </class>
    
    <simplelayout axis="x" />

    <!-- doesn't have a replication manager -->
    <test name="one"   bgcolor="red"    datapath="ds1:/" />

    <!-- has a replication manager -->
    <test name="two"   bgcolor="teal"   datapath="ds2:/" />

</canvas>
