<canvas width="1000" height="1000" oninit="debug.setX(260)">
  <include href="lz/tabs.lzx"/>
  
    <dataset name="items">
        <item value="1" >item one</item>
        <item value="2" >item two</item>
        <item value="3" >item three</item>
    </dataset>

    <dataset name="customtext">
        <item value="11" name="ct one"/>
        <item value="22" name="ct two"/>
        <item value="33" name="ct three"/>
    </dataset>

    <tabs width="250">

        <tabpane text="items" height="100">
            <simplelayout axis="x" spacing="10" />
            <list x="5" y="5" width="130" shownitems="3" >
                <textlistitem datapath="items:/item" text="$path{'text()'}">
                    <method event="onselected" args="isSelected">
                        if (isSelected) {
                            debug.write('items: ', this.datapath.serialize())
                            this.datapath.deleteNode();
                        }
                    </method>
                </textlistitem>
            </list>

            <radiogroup>
                <radiobutton datapath="items:/item" text="$path{'text()'}"/>
            </radiogroup>
        </tabpane>

        <tabpane text="customtext" height="100">
            <simplelayout axis="x" spacing="10" />
            <list x="5" y="5" width="130" shownitems="3" >
                <textlistitem datapath="customtext:/item" text="$path{'@name'}">
                    <method event="onselected" args="isSelected">
                        if (isSelected) {
                            Debug.write('customtext ', this.datapath.serialize())
                            this.datapath.deleteNode();
                        }
                    </method>
                </textlistitem>
            </list>
            <radiogroup>
              <radiobutton datapath="customtext:/item" text="$path{'@name'}"/>
            </radiogroup>
        </tabpane>
    </tabs>

