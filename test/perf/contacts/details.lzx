            </view>
            <view x="10" y="60">
                <text x="0" y="12">Company:</text>
                <text x="0" y="38">Street Address:</text>
                <text x="0" y="92">City:</text>
                <text x="0" y="118">State</text>
                <text x="0" y="146">Zip</text>
