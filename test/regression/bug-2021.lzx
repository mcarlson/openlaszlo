<canvas debug="true">
	<window resizable="true" 
		title="Resize me!" width="200" height="150">
		<attribute name="t0" value="$once{this.state}"/>
		<method event="onstate">
			if (this.state == 5)
				debug.write('RESIZE begin');
			else if (t0 == 5) 
				debug.write('RESIZE end');
			t0 = this.state
		</method>
	</window>
