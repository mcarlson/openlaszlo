<canvas width="800" height="800" bgcolor="#DDCCFF" debug="true" > 
    <dataset name="listOfPeople">
        <person name="buckwheat1" imageurl="../resources/gif/buckwheat.gif" />
        <person name="buckwheat2" imageurl="../resources/gif/buckwheat.gif" />
        <person name="buckwheat3" imageurl="../resources/gif/buckwheat.gif" />
        <person name="buckwheat4" imageurl="../resources/gif/buckwheat.gif" />
    </dataset> 

    <class name="buckwheatClass" width="200" height="200" ondata="this.setData()">
        <text name="myname" width="200">Undefined Name</text>
        <view name="childImage" y="20" resource="../resources/gif/halle.gif" opacity="0.6" />
 
        <method name="setData" >
            var personInfo = this.datapath.getNodeAttributes();
            this.childImage.setSource( personInfo.imageurl );
            this.myname.setText( personInfo.name );
        </method>
    </class>

    <view x="20" y="20" bgcolor="#FFFFFF">
        <buckwheatClass datapath="listOfPeople:/person" />
        <simplelayout axis="x" spacing="10" />
    </view> 

