<canvas>
    <script>
        var relocnt = 0
        var waitDel = undefined;
                
        function waitnload()
        {
        <![CDATA[
            if (typeof(waitDel) == "undefined") 
            	waitDel = new LzDelegate(memhog, 'doRequest');
            counter.setText(relocnt++)
            LzTimer.addTimer(waitDel, 1000);
        ]]>
		}
    </script>


    <dataset name="memhog" src="testdata.xml" type="http" 
             getresponseheaders="false" request="true" 
             ondata="waitnload();"/>
    
    <text name="counter"/>
    
</canvas>

