<!-- test bug 989 -->
<!-- a named layout should not give warnings and should be referencable -->
<canvas>
    <dataset name="daysOfWeek">
        <day type="0"> Sunday </day>
        <day type="1"> Monday </day>
        <day type="1"> Tuesday </day>
        <day type="1"> Wednesday </day>
        <day type="1"> Thursday </day>
        <day type="1"> Friday </day>
        <day type="0"> Saturday </day>
    </dataset>
    
    <class name="testview" bgcolor="red" width="100" height="40" >
        <attribute name="daytype" value="${this.datapath.getXPath('@type')}" />
        <text name="label"  datapath="text()"/>
        <text name="number" text="${classroot.daytype}" />
        <simplelayout axis="y" spacing="2" />
    </class>
    
    <view>
        <testview datapath="daysOfWeek:/day/" />
        <simplelayout name="lyt" axis="y" spacing="2" />
    </view>
    
