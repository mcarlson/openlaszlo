<canvas>
	<include href="redmond"/>
	<simplelayout/>
    <view name="main" width="80" height="80" clip="true">
    	<simplelayout axis="x"/>
        <view name="theview">
            <text multiline="true">
               1<br/>2<br/>3<br/>4<br/>5<br/>6<br/>7<br/>8<br/>9<br/>10
            </text>
        </view>
        <scrollbar axis="y" scrolltarget="$once{parent.theview}" align="right"
                   height="${immediateparent.height}"/>

    </view>
	<scrollbar axis="x" scrolltarget="$once{main.theview}" 
			   width="${main.width - 15}"/>

</canvas>
