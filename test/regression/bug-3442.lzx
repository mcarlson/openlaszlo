<canvas debug="true">
    <simplelayout/>
    <view name="media" >
        <method event="ontimeout">
            Debug.write('timeout');
        </method>
        <method event="onload">
            Debug.write('load');
        </method>
    </view>
    <button>Test timeout
        <method event="onclick">
            media.setSource('http://www.laszlosystems.com/lps/my-apps/video/assets/dashboard.swf', 'serveronly')
        </method>
    </button>
    
    <button>Test load
    	<method event="onclick">
    		media.setSource('http://www.laszlosystems.com/lps/sample-apps/dashboard/media/music/choofenhoufen.mp3')
    	</method>
    </button>
</canvas>
