<canvas debug="true">

    <!-- Views and SWFs -->
    <view>

        <!-- The red view isn't below the SWF... -->
        <view bgcolor="#ddeeff" x="0">
            <simplelayout axis="y" spacing="5" />

            <view bgcolor="green" width="100" height="10" />
            <view resource="../resources/swf/logo.swf" />
            <view bgcolor="red" width="100" height="10" />
        </view>

        <!-- The red view isn't to the right of the SWF and there's -->
        <!-- some blue color pushed off to the right. -->
        <view bgcolor="#ddeeff" x="250">
            <simplelayout axis="x" spacing="5" />

            <view bgcolor="green" width="10" height="100" />
            <view resource="../resources/swf/logo.swf" />
            <view bgcolor="red" width="10" height="100" />
        </view>

    </view>


    <!-- Views and GIFs -->
    <view y="200">

        <!-- this is what I expect -->
        <view bgcolor="#ddeeff" x="0">
            <simplelayout axis="y" spacing="5" />

            <view bgcolor="green" width="100" height="10" />
            <view resource="../resources/gif/logo.gif" />
            <view bgcolor="red" width="100" height="10" />
        </view>

        <!-- why is the blue color sticking out on the right? -->
        <view bgcolor="#ddeeff" x="250">
            <simplelayout axis="x" spacing="5" />

            <view bgcolor="green" width="10" height="100" />
            <view resource="../resources/gif/logo.gif" />
            <view bgcolor="red" width="10" height="100" />
        </view>
    </view>

</canvas>
