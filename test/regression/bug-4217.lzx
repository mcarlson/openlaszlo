<canvas width="200" height="400">
  <dataset name="daily_data">
    <menu>
      <ditem text="Entertainment News" bgcolor="silver" />           
      <ditem text="World News"         bgcolor="silver" />
      <ditem text="Sports News"        bgcolor="silver" />
    </menu>
  </dataset>  
  <tabslider 
    style="$once{dailystyle}" 
    bgcolor="silver" 
    height="${canvas.height}" 
    width="${canvas.width}" 
    spacing="2" 
    mintabheight="20" 
    slideduration="333" datapath="daily_data:/menu">
    <tabelement datapath="*" text="$path{'@text'}" bgcolor="$path{'@bgcolor'}"/>
          
  </tabslider>
</canvas>


