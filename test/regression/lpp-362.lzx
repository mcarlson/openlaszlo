<canvas bgcolor="0x0a0a0a" width="100%" height="100%">
  <debug y="200" />
  
  <splash persistent="true">
    <!-- center -->
    <view resource="../resources/swf/thermometer.swf" ratio="100%" center="true"/>

    <!-- absolute position -->
    <view x="10" y="10" name="logo" resource="../resources/swf/logo.swf" ratio="100%"/>
  </splash>

  <drawview y="1" x="422" height="${canvas.height-2}" width="${canvas.width-423}"> 
    <method event="oninit"> 
      this.redraw(); 
    </method> 
    <method name="redraw"> 
      var g = this.createLinearGradient(0,0,this.width,this.height) 
      g.addColorStop(0, 0x54aabf); 
      g.addColorStop(1, 0x10667b); 
      this.globalAlpha = 1; 
      this.fillStyle = g; 
      this.clear(); 
      this.beginPath(); 
      this.moveTo(11,0); 
      this.lineTo(this.width-11,0); 
      this.quadraticCurveTo(this.width,0,this.width,11); 
      this.lineTo(this.width,this.height-11); 
      this.quadraticCurveTo(this.width,this.height,this.width-11,this.height); 
      this.lineTo(11,this.height); 
      this.quadraticCurveTo(0,this.height,0,this.height-11); 
      this.lineTo(0,11); 
      this.quadraticCurveTo(0,0,11,0); 
      this.closePath(); 
      this.fill(); 
    </method> 
  </drawview>
</canvas> 
