<canvas debug="true">
	<debug y="100"/>
	<class name="tabtrapper" extends="edittext">
		<attribute name="fgcolor" value="white"/>
		
		<method event="onkeydown" args="k">
			if (k == 9) debug.write(this.name + ' losing focus')
		</method>
	
	</class>
	
	<tabtrapper name="greenbox" bgcolor="0x00dd00" width="150" oninit="LzFocus.setFocus(this)">
		Tab between these fields
	</tabtrapper>
	<tabtrapper name="bluebox" bgcolor="0x0000dd" width="100"/>
	<simplelayout axis="x" spacing="10"/>
