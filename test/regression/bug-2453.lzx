<canvas>
    <include href="utils/layouts/library.lzx"/>

    <class name="box" bgcolor="green" width="20" height="20"/>

    <class name="simple" layout="class:simplelayout; axis:x; spacing:20">
       <box/>
       <box/>
       <box/>
       <box/>
    </class>

    <class name="wrap" layout="class:wrappinglayout; axis:x; spacing:10">
       <box/>
       <box/>
       <box/>
       <box/>
    </class>

    <simplelayout axis="y" spacing="5"/>
    <text>class: simplelayout; axis: x; spacing: 20</text>
    <simple id="a"/>

    <text>class: none</text>
    <simple id="a1" layout="class:none"/>

    <text>class: wrappinglayout; axis: x; spacing: 20 (width=60)</text>
    <simple id="b" layout="class:wrappinglayout;" height="60" width="60"/>

    <text>class: wrappinglayout; axis: x; spacing: 10 (width=50)</text>
    <wrap id="c" height="50" width="50"/>

    <text>class: wrappinglayout; axis: x; spacing: 10 (width=50)</text>
    <wrap id="d" height="50" width="50"/>

    <text>axis: x; spacing: 2</text>
    <view id="e" layout="axis:x; spacing: 2">
        <box/>
        <box/>
        <box/>
        <box/>
    </view>

    <class name="simpleplace" bgcolor="yellow"
        layout="class:simplelayout; axis:x; spacing:20">
        <attribute name="defaultplacement" value="content" type="string"/>
        <view x="5" y="5" name='content' bgcolor="white">
        </view>
    </class>


    <simplelayout axis="y" spacing="5"/>
    <text>placement, class: simplelayout; axis: x; spacing: 20</text>
    <simpleplace id="f">
        <box name="b1"/>
        <box name="b2"/>
        <box name="b3"/>
    </simpleplace>

</canvas>
