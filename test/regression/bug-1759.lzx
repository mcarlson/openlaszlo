<canvas>
<view id="v">
<state name="resizeheight" apply="true" bgcolor="silver">
    <!--attribute name="width" value="red.width" when="always"/-->
    <view name="yellow" height="10"
        bgcolor="yellow">
        <attribute name="width" value="parent.red.width" when="always"/>
        <method event="oninit">
            debug.write("top width="+this.width);
            debug.write(parent);
        </method>
    </view>
    <view y="40" name="red" bgcolor="red" width="100" height="10"/>
</state>

</view>
</canvas>
