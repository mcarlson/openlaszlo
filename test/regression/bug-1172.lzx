<canvas debug="true" oninit="debug.sety(70)">
    <method event="onkeydown" reference="LzKeys" args="k">
        Debug.write("key " + k + " down" );
    </method>
    <method event="onkeyup" reference="LzKeys" args="k">
        Debug.write("key " + k + " up" );
    </method>
    <method name="pressA">
        Debug.write("A pressed");
    </method>
    <method event="oninit">
        del = new LzDelegate(this, "pressA" );
        LzKeys.callOnKeyCombo(del, ["A"]);
    </method>

    <class name="myinput" extends="inputtext"
      onfocus="debug.write('multiline='+this.multiline)">
    </class>

     <view>
         <view>
            <text>multiline="true"</text>
            <myinput bgcolor="#EEEEEE"
                 multiline="true">some text</myinput>
             <simplelayout/>
         </view>
         <view>
              <text>multiline="false"</text>
              <myinput bgcolor="#EEEEEE" multiline="false" >some text</myinput>
             <simplelayout/>
        </view>
         <view>
              <text> </text>
              <myinput bgcolor="#EEEEEE" >some text</myinput>
             <simplelayout/>
        </view>
         <simplelayout axis="x" spacing="20"/>
    </view>
      <view height="20"/>
     <view>
         <view>
            <text>multiline="true" height="50"</text>
            <myinput bgcolor="#EEEEEE"
                 multiline="true" height="50">some text</myinput>
             <simplelayout/>
         </view>
         <view>
              <text>multiline="false" height="50"</text>
              <myinput bgcolor="#EEEEEE" height="50" multiline="false" >some text</myinput>
             <simplelayout/>
        </view>
         <view>
              <text>height="50"</text>
              <myinput bgcolor="#EEEEEE" height="50" >some text</myinput>
             <simplelayout/>
        </view>
         <simplelayout axis="x" spacing="20"/>
    </view>

     <view height="20"/>
     <view>
         <view>
            <text>multiline="true"</text>
            <text>height="50" width="50"</text>
            <myinput bgcolor="#EEEEEE"
                multiline="true" height="50" width="50">some text</myinput>
             <simplelayout/>
         </view>
         <view>
              <text>multiline="false"</text>
              <text>height="50"  width="50"</text>
              <myinput bgcolor="#EEEEEE" height="50"  width="50" multiline="false" >some text</myinput>
             <simplelayout/>
        </view>
         <view>
              <text>  </text>
              <text>height="50"  width="50"</text>
              <myinput bgcolor="#EEEEEE" height="50"  width="50">some text</myinput>
             <simplelayout/>
        </view>
         <simplelayout axis="x" spacing="20"/>
    </view>

    <view height="20"/>

     <view>
         <view>
            <text>multiline="true"</text>
            <text>height="50" width="50"</text>
            <text>resizable="true"</text>
            <myinput bgcolor="#EEEEEE"
                multiline="true" height="50" width="50"
                resizable="true">some text</myinput>
             <simplelayout/>
         </view>
         <view>
              <text>multiline="false"</text>
              <text>height="50"  width="50"</text>
              <text>resizable="true"</text>
              <myinput bgcolor="#EEEEEE" height="50"  width="50"
                  resizable="true" multiline="false" >some text</myinput>
             <simplelayout/>
        </view>
         <view>
              <text>  </text>
              <text>height="50"  width="50"</text>
              <text>resizable="true"</text>
              <myinput bgcolor="#EEEEEE" height="50"  width="50"
                  resizable="true">some text</myinput>
             <simplelayout/>
        </view>
         <simplelayout axis="x" spacing="20"/>
    </view>
    <simplelayout />
