<canvas>
  <resource name="h" src="../resources/gif/h.gif"/>
  <resource name="two" src="../resources/gif/2c.gif"/>
  <resource name="three" src="../resources/gif/3c.gif"/>

  <class name="card" width="73" height="97" extends="view" 
	 oninit="this.setResource('two');discard.doStart();">
    <method name="swapnew">
        this.setResource('three');
        this.animate("y",100,500);
        this.animate("rotation","0",500);
     </method>
    <animatorgroup name="discard" process="simultaneous"
		    onstop="this.parent.swapnew();" duration="500">
          <animator attribute="y" to="200"/>
          <animator attribute="x" to="155"/>
          <animator attribute="rotation" to="180"/>
    </animatorgroup>
</class>

<card name="card1" x="200" y="100"  rotation="180"/>
