<canvas debug="true">
    <dataset name="topiclist">
        <data>1</data>
        <data>2</data>
        <data>3</data>
        <data>4</data>
    </dataset>

    <text name="text" datapath="topiclist:/data/text()" onclick="deleteme();">
        <method name="deleteme">
            Debug.write( "before delete, offset " + datapath.getNodeOffset() );
            datapath.deleteNode();
        </method>
    </text>

    <button 
        onclick="canvas.datasets.topiclist.getPointer().addNode( 'data','x')"/>
    
    <simplelayout/>
</canvas>
