<canvas debug="true">
    <view bgcolor="blue" width="20" height="20" y="50" clickable="true">
        <state id="panoramicMode">
            <method event="onremove">
                Debug.write('removed');
            </method>
            <method event="onmouseover">
                Debug.write('mouseover');
            </method>
            <method event="onapply">
                Debug.write('applied');
            </method>
        </state>
    </view>

    <button>Click me
        <method event="onclick">
            if ( panoramicMode.isapplied ){
                panoramicMode.remove();
            } else {
                panoramicMode.apply();
            }
        </method>
    </button>

    <debug y="200"/>
</canvas>


