<canvas width="500" height="420">

    <debug x="20" y="60" />

    <dataset name="saverama" src="savenodecode.jsp" type="http" request="false"/>

    <datapointer xpath="saverama:/*">
        <method event="ondata">
            Debug.write("got data");
        </method>
    </datapointer>

    <button x="20" y="20" >Save
        <method event="onclick">
            canvas.saverama.setQueryType('POST');
            canvas.saverama.setQueryParams({fname: 'playlist.xml', content: 'play list' });
            canvas.saverama.doRequest();
            canvas.saverama.setQueryParams({fname: 'artist.xml', content: 'artist list' });
            canvas.saverama.doRequest();
            canvas.saverama.setQueryParams({fname: 'album.xml', content: 'album list' });
            canvas.saverama.doRequest();
            canvas.saverama.setQueryParams({fname: 'song.xml', content: 'song list' });
            canvas.saverama.doRequest();
        </method>

    </button>

</canvas>
