<canvas debug="true"> 
	<simplelayout/>
	<text text="The text below should not change when button is clicked"/>
	
	<text name="msg" resize="true" bgcolor="yellow">TEST STRING
		<method event="ontext">

			debug.write('text changed')

		</method>
	</text>
	
	<button text="Click to test">
		<method event="onclick">
			msg.setText('TEST STRING')
		</method>
	</button>
