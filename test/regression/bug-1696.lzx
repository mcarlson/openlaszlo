<canvas debug="true"
        width="500"
        height="300">
    <include href="redmond"/>

	<debug y="100"/>
	<!--In this case, we look at the 'selected' attribute -->
	<view>
	  <text> Set One: </text>
	  <radio name="one" onclick="parent.checkRadioStatus()"/>
	  <radio name="two" onclick="parent.checkRadioStatus()"/>
	  <radio name="three" onclick="parent.checkRadioStatus()"/> 
	  <simplelayout axis="x" spacing="5"/>

	  <method name="checkRadioStatus">
		 if( one.getAttribute('selected') ) {
			debug.write('set one: radio one selected');
		 }
		 else if ( two.getAttribute('selected') ) {
			debug.write('set one: radio two selected');
		 } 
		 else if ( three.getAttribute('selected') ) {
			debug.write('set one: radio three selected');
		 }
	  </method>
	</view>

	<!-- In this case, we look at the 'amselected' attribute -->
	<view>
	  <text> Set Two: </text>
	  <radio name="one" onclick="parent.checkRadioStatus()"/>
	  <radio name="two" onclick="parent.checkRadioStatus()"/>
	  <radio name="three" onclick="parent.checkRadioStatus()"/> 
	  <simplelayout axis="x" spacing="5"/>

	  <method name="checkRadioStatus">
		 if( one.getAttribute('amselected') ) {
			debug.write('set two: radio one selected');
		 }
		 else if ( two.getAttribute('amselected') ) {
			debug.write('set two: radio two selected');
		 } 
		 else if ( three.getAttribute('amselected') ) {
			debug.write('set two: radio three selected');
		 }
	  </method>
	</view>
	<simplelayout axis="y" spacing="10"/>
</canvas>

