<canvas debug="true">
	
	<debug y="100"/>
	
	<dataset name="ds_sec" src="http://www.laszlosystems.com/cgi-pub/weather.cgi?zip=94116" secure="true" port="10443" request="true"/>
    <dataset name="ds_reg" src="http://www.laszlosystems.com/cgi-pub/weather.cgi?zip=94116" request="true"/>
    
    <view>
        <simplelayout axis="x" spacing="10"/>
        <view bgcolor="silver">
            <simplelayout/>
            <text label="Data from secure data source:" fontstyle="bold"/>
            <text datapath="ds_sec:/weather/forecast/day/@label"/>
        </view>
        <view bgcolor="teal">
            <simplelayout/>
            <text label="Data from non-secure data source:" fontstyle="bold"/>
            <text datapath="ds_reg:/weather/forecast/day/@label"/>
        </view>
    </view>
    
</canvas>
