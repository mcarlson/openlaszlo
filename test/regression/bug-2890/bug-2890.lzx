<canvas width="640" height="620" debug="true"
    maxtextwidth="2000">

    <debug y="160" />

    <dataset type="http" name="cids" />

    <dataset name="items">
        <item text="items-025.xml" />
        <item text="items-050.xml" />
        <item text="items-100.xml" />
        <item text="items-150.xml" />
        <item text="items-194.xml" />
    </dataset>

    <simplelayout axis="x" spacing="10" />

    <view layout="axis: y; spacing: 2" >
        <list name="cacheitems" width="130" >
            <textlistitem  datapath="items:/item/" text="$path{'@text'}" />
        </list>
        <button text="Get cache info">
            <method event="onclick">
                var v = parent.cacheitems.getValue();
                if (v == null) v = "items-025.xml";
                cids.setSrc("file:" + v);
                cids.doRequest();
                Debug.write("Requesting " + v);
            </method>
        </button>
    </view>

    <view height="200" width="400" clip="true" >

        <datapath xpath="cids:/lps-cacheinfo[1]/compiler-media-cache[1]/disk[1]" 
                  pooling="true"/>

        <view layout="class: simplelayout; axis: y; spacing: 1" >
            <view>
                <datapath xpath="item" replication="lazy" />
                <text width="${canvas.maxtextwidth}" datapath="@key" />
            </view>
        </view>

        <scrollbar name="sby" />
        <scrollbar name="sbx" axis="x"/>
    </view>

    <datapointer xpath="cids:/*[1]">
        <method event="ondata">
            Debug.write("Got data for cache items");
        </method>
    </datapointer>

