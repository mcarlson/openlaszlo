headline="Bond girl" degrees="225"/>
        <celebrity name="Halle Berry" imageurl="../resources/gif/halle.gif"
headline="Bond girl" degrees="243"/>
    </dataset> 

    <class name="celebImage" opacity="0.6"
onmouseover="this.doMouseOver()" onmouseout="this.doMouseOut()"
        onclick="this.select()" resource="../resources/gif/halle.gif">

        <attribute name="degrees" type="number" value="0" />
        <attribute name="isSelected" type="string" value="false" />

        <method name="doMouseOver">
            this.setAttribute( "opacity", 1.0 );
        </method>

        <method name="doMouseOut">
            if (this.isSelected == "true" ) {
                return;
            } else {
                this.setAttribute( "opacity", 0.6 );
            }
        </method>

        <method name="select">
            this.isSelected = "true";
        </method>

        <method name="deselect">
            this.isSelected = "false";
        </method>

        <method name="loadData" event="ondata">
            var celebInfo = this.datapath.getNodeAttributes();
            setAttribute('degrees', celebInfo.degrees);
            this.setSource( celebInfo.imageurl );
        </method>

    </class>

    <view name="starCircle" width="800" height="600" >

        <attribute name="radius" type="number" value="240" />

        <celebImage x="${this.parent.radius*Math.cos(
Math.PI*this.degrees/180 ) + this.parent.radius}"
            y="${this.parent.radius*Math.sin( Math.PI*this.degrees/180 ) +
this.parent.radius}"
            rotation = "${this.degrees - 99}"
datapath="celebrityData:/celebrity" />

    </view>

</canvas>
