<canvas>
    <attribute name="bnum" value="0"/>
    <class name="hidebutton" onclick="this.setVisible( false )"
           text="${'hide' + canvas.bnum++}" extends="button">
        <method event="onshow" reference="parent">
            this.setVisible( true );
        </method>
    </class>
    <view>
        <simplelayout spacing="4"/>
        <button onclick="parent.onshow.sendEvent()"> Show all</button>
        <hidebutton/>
        <hidebutton/>
        <hidebutton/>
        <hidebutton/>
        <hidebutton/>
    </view>
</canvas>
