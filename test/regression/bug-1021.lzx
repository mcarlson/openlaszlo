<canvas>
    <font src="helmetbi.ttf" name="obliqueText" />
    <simplelayout axis="x" />

    <view bgcolor="green">
    <text name="buttonText" font="obliqueText" fontsize="30" 
          fgcolor="#ff0000" x="13">0
        <method event="ontext">
            this.setAttribute('width', this.getTextWidth());
        </method>
    </text>
    </view>

    <view bgcolor="green">
    <text name="buttonText" font="obliqueText" fontsize="30" 
          width="100"
          fgcolor="#ff0000" x="13">0
        <method event="ontext">
            this.setAttribute('width', this.getTextWidth());
        </method>
    </text>
    </view>
</canvas>

