<canvas bgcolor="silver" width="800" >
    <font name="hel" src="helmetr.ttf" />
    <debug x="250" fontsize="14" />
    <include href="/lz/library.lzx"/>

    <dataset name="surveydataset" type="http"
        src="http:testsurvey.jsp" ondata="Debug.write('data' +
this.data.serialize());" />

    <form>
        <submit name="survey" data="${surveydataset}"/>
        <statictext>What is your favorite vacation spot?</statictext>
        <radiogroup name="vote">
            <radiobutton value="'paris'"  >Paris</radiobutton>
            <radiobutton value="'hawaii'" >Hawaii</radiobutton>
            <radiobutton value="'jamaica'">Jamaica</radiobutton>
        </radiogroup>
        <button isdefault="true"
            onclick="parent.survey.submit()">submit</button>
    </form>

    <view name="results" datapath="surveydataset:/">
        <simplelayout axis="y"/>
        <view><simplelayout axis="x"/><text>submit status: </text><text
datapath="/@status"/></view>
        <view><simplelayout axis="x"/><text>submit error: </text><text
datapath="/@error"/></view>
        <view><simplelayout axis="x"/><text>response status: </text><text
datapath="response/@status"/></view>
        <view>
             <text>you voted for </text>
             <text datapath="response/vote/text()"/>
             <simplelayout axis="x"/>
         </view>
         <text>summary:</text>
         <view>
             <text datapath="response/summary/option/@name"
ondata="Debug.write('n:' + this.data)" />
             <text datapath="response/summary/option/text()"
ondata="Debug.write('t:' + this.data)" />
             <simplelayout axis="y"/>
          </view>
    </view>
    <simplelayout/>
</canvas>

