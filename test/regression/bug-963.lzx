<canvas debug="true">
<include href="redmond"/>
<resource name="c2" src="../resources/gif/c2.gif"/>
<resource name="c3" src="../resources/gif/c3.gif"/>
    <button label="replace clickability" 
	    onclick="
	    this.parent.card1.clickOn();
	    this.parent.card2.clickOn();
	    this.parent.card1.showme('c2');
	    this.parent.card2.showme('c2');
	    "/>
    <button label="remove clickability"
	    y="40"
	    onclick="
	    this.parent.card1.clickOff();
	    this.parent.card2.clickOff();
	    this.parent.card1.showme('c3');
	    this.parent.card2.showme('c3');
	    "/>
  <class name="card" onclick="moveme();" oninit="showme('c2');">
    <method name="moveme">
      if (this.y == 80){
        this.animate("y",100,500);
      }else{
        this.animate("y",80,500);
      }
    </method>
    <method name="showme" args="res">
      this.setresource(res);
    </method>
    <method name="clickOn">
      this.setClickable(1);
      debug.write("clickOn: " + this.name);
    </method>
    <method name="clickOff">
      this.setClickable(0);
      debug.write("clickOff: " + this.name);
    </method>
  </class>
  
  <card name="card1" x="20" y="80" width="65" height="90"/>
  <card name="card2" x="90" y="80" width="65" height="90"/>
</canvas>
