<canvas debug="true" >
    <dataset name="myds">
        <myrootnode>
            <item color="0xffff33" viz="true" />
            <item color="0x0000ff" viz="true" />
            <item color="0x00ff00" viz="false" />
            <item color="0xff0000" viz="true" />
            <item color="0x00ff00" viz="true" />
        </myrootnode>
    </dataset>


    <view datapath="myds:/myrootnode">
        <attribute name="mark" value="'kfdj'"/>
        <simplelayout spacing="2" />

        <view width="200" height="20" 
              bgcolor="red"
              onclick="debug.write(this )">
            <datapath xpath="item">
                <attribute name="dataControlsVisibility" value="false"/>
            </datapath>

            <attribute name="bgcolor" 
                       value="$once{parseint(this.datapath.xpathQuery('@color'))}"
                       type="number" />

            <attribute name="visible" 
                       value="$once{'true' == this.datapath.xpathQuery('@viz')}"/>
            <?cc
                            value="$once{this.datapath.getXPath('@viz')}"/>
            ?>

        </view>

    </view>
</canvas>
