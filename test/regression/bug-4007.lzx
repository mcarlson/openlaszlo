<canvas width="1280" height="1024" debug="true">
    <dataset name="myds" src="http://kosh.homelinux.com:8080/aspire/3200_wide.xml"  request="false"
      ondata="Debug.write('dataset loaded');spinner.spin.stop()"/>
    <dataset name="myds2" src="http:../resources/xml/1600_wide.xml"  request="false"
      ondata="Debug.write('dataset loaded');spinner.spin.stop()"/>
    <dataset name="myds3" src="http:../resources/xml/800_forms.xml"  request="false"
      ondata="Debug.write('dataset loaded');spinner.spin.stop()"/>
<simplelayout/>


    <button onclick="myds.doRequest();spinner.spin.doStart()">3200 wide nodes</button>
    <button onclick="myds2.doRequest();spinner.spin.doStart()">1600 wide nodes</button>
    <button onclick="myds3.doRequest();spinner.spin.doStart()">800 multinode rows</button>
<text>Spinner should not stop until debugger shows 'loaded'</text>

    <view id="spinner" width="10" height="50" x="50" y="50" bgcolor="blue" 
         xoffset="5" yoffset="50">
       <animator name="spin" start="false" attribute="rotation" motion="linear" 
                 duration="1000" to="180" 
                 relative="true" repeat="Infinity"/>
    </view>
</canvas>