<canvas debug="true">

    <dataset name="myds">
        <myroot smelly="poo" />
    </dataset>

    <datapointer xpath="myds:/myroot" name="mydp">
        <method name="retrieveValue">
            debug.write( "retrieveValue called" );
            mybox.datapath.updateData();
            debug.write( "smelly: " + this.getNodeAttribute("smelly") );
        </method>
    </datapointer>

    <simplelayout axis="y" spacing="10" />
    <text multiline="true" width="300">Change the text below (bound to an
attribute in the data), then
    click the button below to retrieve that attribute:</text>

    <edittext name="mybox" datapath="myds:/myroot/@smelly" />

    <button onclick="mydp.retrieveValue()">Retrive value of "smelly" in the
myroot node</button>

</canvas>
