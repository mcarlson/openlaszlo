<canvas>
    <simplelayout/>
    <button onclick="mydel.enable()">start (hit while moving shouldn't stop)
    </button>
    <button onclick="mydel.disable()">stop</button>
    <view bgcolor="red" width="20" height="20">
        <method event="oninit">
            global.mydel = new LzDelegate( this , 'doSomething' );
            mydel.register( LzIdle, "onidle" );
        </method>
        <method name="doSomething">
            this.setX( this.x+1 );
            if ( this.x > 600 ){
                this.setX( 0 );
            }
        </method>
    </view>

</canvas>
