<canvas width="500" height="300" debug="true">
	<include href="redmond"/>
	<view id="foo" height="100" resource="../resources/jpg/logo.jpg" visible="false">
		<method event="onvisible">
			Debug.write('Visible is now ' + this.visible);
		</method>
	</view>
	<simplelayout axis="y" spacing="20"/>
	<class name="mybutton" extends="button">
		<attribute name="vis" value="false" when="once"/>
		<method name="toggleVisibility" args="obj">
			vis = !vis;
			obj.setVisible(vis);
			if (vis == true) this.setAttribute('label', 'Hide');
			else this.setAttribute('label', 'Show');
		</method>
	</class>
	<mybutton onclick="toggleVisibility(foo)" label="Show"/>
	<debug y="150"/>
