<canvas width="1000" debug="true">
    <include href="redmond"/>

    <class name="videoTester" width="110">
        <attribute name="src" value="null" type="string"/>
        <button label="${'Load ' + parent.src}" width="100" onclick="parent.loadvid()" />
        <text name="textperc" align="center" resize="true" />
        <view name="vidview" width="100" height="100" stretches="both" clip="true" bgcolor="#666666" >
            <method name="showload" event="onloadratio" args="p">
                parent.textperc.setText( Math.ceil(p*100)+"%" );
            </method>
			<method event="ontimeout">
				Debug.write('timeout loading ' + parent.src)
			</method>

        </view>
        <button label="Unload video" width="100" 
                onclick="parent.vidview.unload();parent.vidview.showload()" />
        <simplelayout spacing="5" />

        <method name="loadvid">
            this.vidview.setSource( 'http://www.laszlosystems.com/lps/my-apps/video/assets/' + this.src, "serveronly" );
        </method>
        
    </class>

    <videoTester src="auction.swf" />
    <videoTester src="dashboard.swf" />
    <videoTester src="travel.swf" />
    <videoTester src="video.swf" />
    <videoTester src="xml.swf" />

	<view name="debugdata">
		<text>Open connections: </text>
		<text name="conns" />
		<simplelayout axis="x" spacing="5"/>
		<method reference="LzIdle" event="onidle" >
			this.conns.setText( LzLoadQueue.openconx );
		</method>
	</view>

    <simplelayout axis="x" spacing="15" />
</canvas>
