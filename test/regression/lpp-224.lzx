     <alert id="gAlertMandatory">
         Please enter the positive integer as the number of instances to
         be created.
     </alert>
     <alert id="gAlertMaximum">
         The number of instances should be less than 30.
     </alert>

     <window id="CreatePanel" title="CreatePanel">
     <inputtext>Enter the number of windows to be created :</inputtext>

     <edittext id="NumOfInstances" x="262" y="0" align="left"
         width="30">
     </edittext>
     <button y="30">
         Create New Instances
         <method event="onclick">
             <![CDATA[

             var maxInstances = NumOfInstances.getText();
             if (isInteger(maxInstances)){
                 if(maxInstances > 30){   
                     gAlertMaximum.open();
                     LzFocus.setFocus(NumOfInstances);
                     return;
                 }
                 for(i = 0; i < maxInstances; i++){
                     var instName = "ashish" + i;
                     new mywindow(canvas,{title:'Window ' + (i + 
 1),name:instName,resizable:true, closeable:true, x: (169 * (i - ( 6 * 
 (IntegerDiv(i, 6)))) ), y:(70 + (100* IntegerDiv(i, 6)))})
                 }
                 DestroyPanel.setVisible(true);
                 parent.setVisible(false);
             }else{
                 gAlertMandatory.open();
                 LzFocus.setFocus(NumOfInstances);
             }
             ]]>
         </method>
     </button>
     </window>

     <window id="DestroyPanel" title="DestroyPanel" visible="false">
     <button>
         Destroy Windows Instances
         <method event="onclick">
             <![CDATA[
             var maxInstances = NumOfInstances.getText();
             if (isInteger(maxInstances)){
                 if(maxInstances > 30){   
                     gAlertMaximum.open();
                     LzFocus.setFocus(NumOfInstances);
                     return;
                 }
                 for(i = 0; i < maxInstances; i++){
                     var instName = "ashish" + i;
                     canvas[instName].destroy(true);
                 }
                 CreatePanel.setVisible(true);
                 parent.setVisible(false);
             }else{
                 gAlertMandatory.open();
                 LzFocus.setFocus(NumOfInstances);
             }
             ]]>
         </method>
     </button>
     </window>
</canvas>
