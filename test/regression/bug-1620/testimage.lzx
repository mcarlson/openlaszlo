<canvas width="640" height="480">
<include href="gridzoomselectlayout.lzx"/>

<dataset name="items" >
     <query>
        <record>
          <sku>4</sku>
          <title>Tetsubin Iron Teapot</title>
          <price>455</price>
          <image>http://sf.laszlosystems.com/potstore/pictures/small/japanese_iron_teapot.jpg</image>
          </record>
      </query>
</dataset>

<class name="image">
    <method name="applyData" args="d" >
        debug.write("applyData: "+d);
       if (d == null) { return; }
        setSource( d );
    </method>
</class>

<image width="100" height="100" bgcolor="green"
    datapath="items:/query/record/image/text()"
    onclick="this.width == 100 ? setAttribute('width', 200):setAttribute('width', 100)">
</image>


