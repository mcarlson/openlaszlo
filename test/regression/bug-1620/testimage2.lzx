<canvas width="640" height="480">
<include href="gridzoomselectlayout.lzx"/>

<dataset name="items">
    <query>
        <record>
            <sku>4</sku>
            <title>Tetsubin Iron Teapot</title>
            <price>455</price>
            <image>http://sf.laszlosystems.com/potstore/pictures/small/japanese_iron_teapot.jpg</image>
        </record>
        <record>
            <sku>5</sku>
            <title>Brown Bird Teapot</title>
            <price>31.5</price>
            <image>http://sf.laszlosystems.com/potstore/pictures/small/brownbirdteapot.jpg</image>
        </record>
    </query>
</dataset>

<class name="image">
    <method name="applyData" args="d" >
        debug.write("applyData: "+d);
       if (d == null) { return; }
        setSource( d );
    </method>
</class>

<view datapath="items:/query/record/" bgcolor="green"
    width="100" height="100">
    <image width="100%" height="100%" stretches="both"
        datapath="image/text()"
        onclick="parent.width == 100 ? parent.resize(200):parent.resize(100)">
    </image>
    <method name="resize" args="size">
        debug.write("resize: "+size);
       // setAttribute('width', size);
       // setAttribute('height', size);
        this.animate( 'width' , size, 1500, false);
        this.animate( 'height' , size, 1500, false);
    </method>
</view>
<simplelayout/>

