<canvas width="640" height="480">
<include href="gridzoomselectlayout.lzx"/>
<class name="testview" width="100" height="100">
    <attribute name="select" value="false"/>
    <text bgcolor="white" onclick="parent.setAttribute('select', false); cataloglayout.setselectedview(0);"
        visible="${parent.select}">back</text>
    <view width="100%" options="releasetolayout" onclick="catalogselector.select(parent);"/>
    <resizelayout axis="y"/>
    <method name="setSelected" args="sel">
        debug.write( "setSelected: "+sel);
        setAttribute('select', sel);
        if (sel) {
            cataloglayout.setselectedview(this);
        }
    </method>
</class>

<class name="greenview" extends="testview" bgcolor="green" />
<class name="yellowview" extends="testview" bgcolor="yellow" />
<class name="blueview" extends="testview" bgcolor="blue" />

<view width="100%" height="100%" bgcolor="silver">
  <selectionmanager id="catalogselector"/>
  <greenview/>  <greenview/>  <greenview/>  <greenview/>  <greenview/>
  <yellowview/>  <yellowview/>  <yellowview/>  <yellowview/>  <yellowview/>
  <blueview/>  <blueview/>  <blueview/>  <blueview/>  <blueview/>
  <gridzoomselectlayout id="cataloglayout" animated="true" columns="5"/>
</view>




