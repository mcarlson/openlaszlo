<canvas height="500" oninit="debug.setY(150)">

    <dataset name="items">
        <group value="1">
            <item value="1" >item one</item>
            <item value="2" >item two</item>
            <item value="3" >item three</item>
        </group>
    </dataset>

    <view x="10" y="10">
        <simplelayout axis="y" spacing="5" />
        <view>
            <simplelayout axis="x" spacing="2" />
            <text>dataset value: </text>
            <text datapath="items:/group/@value" />
        </view>
        <view>
            <simplelayout axis="x" spacing="2" />
            <text>radiogroup value: </text>
            <text text="${ rg.value }" />
        </view>
        <view>
            <simplelayout axis="x" spacing="5" />
            <radiogroup id="rg" datapath="items:/group/@value" y="15">
                <simplelayout axis="y" spacing="2" />
                <radiobutton datapath="items:/group/item/text()" 
                             onclick="parent.datapath.updateData()"
                             value="$path{ '@value' }"/>
            </radiogroup>
        </view>
    </view>

</canvas>
