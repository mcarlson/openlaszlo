<canvas width="800" height="600" debug="true">
    <datapointer xpath="t:/node">
        <method event="oninit">
            global.Debug.write( "serialized:" + this.serialize() );
            global.Debug.write( "text:" +  this.getNodeText() );
        </method>
    </datapointer>

    <dataset name="t">
        <node>
        This is text
        <bar/>
        more text
        </node>
    </dataset>
</canvas>


