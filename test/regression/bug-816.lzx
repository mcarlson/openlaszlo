<canvas debug="true">
<!-- remove debugger for expected behavior -->
  <resource name="2" src="../resources/gif/2c.gif"/>
  <resource name="3" src="../resources/gif/3c.gif"/>

  <script><![CDATA[
    // Globals:
    var Deck=[2,3];
    var pHand=new Array();

    // card constructor
    function card(res,x,y){
      this.res=res;
      this.x=x;
      this.y=y;

      var view = new LzView(canvas,{name:res,resource:res});
      this.view= view;

      // set initial state of the card
      view.animateProps(300);
      view.setRotation(180); // All cards start rotated 180deg 
      //view.setResource(res); // All cards start rotated 180deg 
      view.setX(x); 
      view.setY(y);    
    }

    function dealMe(ind,x,y,scale){
      debug.write("view="+pHand[ind].view);
      pHand[ind].view.animate('x',x,scale);
      pHand[ind].view.animate('y',y,scale);
      pHand[ind].view.animate('rotation',0,scale);
      debug.write(x,y,scale);
    }

    pHand.push(new card(Deck[0],200,100));
    pHand.push(new card(Deck[1],200,120));

    dealMe(0,100,100,333);
    dealMe(1,120,120,666);


  ]]>
  </script>
