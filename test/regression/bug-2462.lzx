<canvas font="vera">
    <!-- vera is smaller than lztahoe8 -->
    <font name="vera" src="bitstream-vera-1.10/vera.ttf" />
    <font name="lztahoe8" src="lztahoe8.ttf" />

    <class name="silly" font="lztahoe8"/>

    <class name="willy" extends="silly" >
        <simplelayout />
        <text>class view</text>
    </class>

    <simplelayout />
    <willy/>
    <willy>
        <text>instance view</text>
    </willy>
    <text>Text using default canvas font</text>
    <simplelayout/>
</canvas>
