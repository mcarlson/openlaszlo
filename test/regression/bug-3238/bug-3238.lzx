<canvas width="750" height="600"> 
    <simplelayout/>
    <view name="broken" stretches="both">
        <method name="show" event="onload">
            this.setOpacity(0);
            this.setVisible(true);
            this.bringToFront();
            this.showAnim.doStart();
        </method>
        <method name="loadThenShow" args="u">
            this.setVisible(false);
            this.setSource(u);
        </method>
        <animator name="showAnim" start="false" attribute="opacity" to="1" duration="250"/>
    </view>
    <button>Load broken due to setVisible() needed for proper scaling
        <method event="onclick">
            parent.broken.loadThenShow('img.jpg');
        </method>
    </button>
    <view name="working" stretches="both">
        <method name="show" event="onload">
            this.setOpacity(0);
            this.bringToFront();
            this.showAnim.doStart();
        </method>
        <method name="loadThenShow" args="u">
            this.setSource(u);
        </method>
        <animator name="showAnim" start="false" attribute="opacity" to="1" duration="250"/>
    </view>
    <button>Load works
        <method event="onclick">
            parent.working.loadThenShow('img.jpg');
        </method>
    </button>

</canvas>
