<canvas width="800" height="800" debug="true" >
    <script>
        var defaultBoxSize = 50;
    </script>
    <view id="redBox"
          bgcolor="red"
          width="${defaultBoxSize}" height="${defaultBoxSize}"
          x="200"
          oninit="this.findBoxSize();">
        <method name="findBoxSize">
            Debug.Write( this.getProp( 'width' ) );
        </method>
    </view>
    <button onclick="redBox.findBoxSize();">Find Box Size</button>
</canvas>
