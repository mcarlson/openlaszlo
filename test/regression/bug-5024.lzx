<canvas>
<view  width="200" height="200" bgcolor="black">
<drawview width="${parent.width}" height="${parent.height}" onmousedown="this.dragger.apply()" onmouseup="this.dragger.remove()">
        <dragstate name="dragger"/>
<method event="oninit">
this.moveTo(11,0);
// top
this.lineTo(this.width-11,0);
this.quadraticCurveTo(this.width,0,this.width,11);

// right
this.lineTo(this.width,this.height-11);
this.quadraticCurveTo(this.height,this.width,this.width-11,this.height);

// bottom
this.lineTo(11,this.height);
this.quadraticCurveTo(0,this.height,0,this.height-11);

// left
this.lineTo(0,11);
this.quadraticCurveTo(0,0,11,0);
this.closePath;
            this.fillStyle = 0x0000ff;
            this.globalAlpha = .5;
            this.fill();
            

            this.strokeStyle = 0x000000;
            this.lineWidth = 10;
            this.stroke();
</method>
<view x="10" y="10" width="20" height="20" bgcolor="red" onclick="parent.parent.setAttribute('width',300);" />

</drawview>
</view>
</canvas>