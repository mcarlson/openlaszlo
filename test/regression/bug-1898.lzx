<canvas debug="true" height="700">
	<debug y="200"/>
	<include href="lzunit"/>
	<include href="redmond"/>
	<class name="MenubarMetrics" extends="TestCase">
		<menubar name="bar"  width="200" height="40">
			<menu name="file" label="File" hasbutton="true" width="180">
				<menuitem label="New" height="16"  />
				<menuitem label="Open" height="16" />
				<menuitem label="Save" height="16"/>
				<menuseparator/>
				<menuitem label="Close" height="16" />
			</menu>
			<menu label="Edit" hasbutton="true" width="150">
				<menuitem label="Cut"   height="16" />
				<menuitem label="Copy"  height="16" />
				<menuitem label="Paste" height="16" />
			</menu>
		</menubar>
		
		<method name="testTagWidth">
			assertEquals(200, bar.width, "\nSetting width through tag failed")
		</method>
		<method name="testJSWidth">
			bar.setWidth(250)
			assertEquals(250, bar.width, "\nSetting width through API failed")
		</method>
	</class>
	
	<TestSuite>
		<MenubarMetrics bgcolor="#ccc" width="300" height="200"/>
	</TestSuite>
