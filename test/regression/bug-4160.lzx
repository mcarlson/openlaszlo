<canvas>

    <dataset name="mydata">
        <stuff>
            <thing order="0"/>
            <thing order="1"/>
            <thing order="2"/>
            <thing order="3"/>
            <thing order="4"/>
            <thing order="5"/>
            <thing order="6"/>
            <thing order="7"/>
            <thing order="8"/>
            <thing order="9"/>
        </stuff>
    </dataset>

    <view name="bad" width="50" bgcolor="red">
        <attribute name="rootdata" value="mydata" type="string"/>
        <text name="a" datapath="$once{ parent.rootdata + ':/stuff/thing/@order'}"/>
        <simplelayout axis="y"/>
    </view>

    <view name="good" width="50" bgcolor="green">
        <text name="a" datapath="mydata:/stuff/thing/@order"/>
        <simplelayout axis="y"/>
    </view>

    <simplelayout axis="x"/>
</canvas>
