<canvas debug="true" width="1024">
    <class name="sizeToSizer" height="40" bgcolor="red" stretches="width" >
        <attribute name="sizer" value="thesizer" when="once" />
        <attribute name="width" value="thesizer.x" when="always" />
    </class>

    <view id="thesizer" x="100" height="10"
          oninit="Debug.setHeight(300);Debug.setY(100)"
          width="5" clickable="true" bgcolor="blue">
        <method event="onmousedown">
            dragx.apply();
        </method>
        <method event="onmouseup">
            dragx.remove();
        </method>
        <state name="dragx">
            <attribute name="x" value="this.parent.getMouse( 'x' )" when="always" />
        </state>
    </view>
        
    <sizeToSizer/>

    <sizeToSizer>
        <text> this is just a little text</text>
    </sizeToSizer>
    <sizeToSizer>
        <view width="10" height="10" bgcolor="blue" 
              onclick="parent.sometext.apply()"/> 
        <state name="sometext">
            <text> ja this is some text</text>
        </state>
    </sizeToSizer>
    <simplelayout spacing="8"/>
</canvas>
