<canvas width="800" debug="true">

    <debug x="275" width="510" height="330" />

    <dataset name="dsSizzle" type="http" request="true"
         src="http://www.ntnse.com/richui?datatype=sizzle"
         ondata="Debug.write( 'data:', this.serialize() )" 
         onerror="Debug.write( 'error:', this.serialize() )"
         ontimeout="Debug.write( 'timeout:', this.serialize() )" />

    <class name="zbutton" extends="button">
        <attribute name="did" type="number" />
        <method event="onclick">
        <![CDATA[
            var src = 'http://www.ntnse.com/richui?datatype=sizzle&doorId=' + this.did;
            dsSizzle.setSrc( src );
            dsSizzle.doRequest();
            debug.write('request:', src);
        ]]>
        </method>
    </class>

    <view layout="axis: x; spacing: 5" >
        <zbutton did="1" text="1UP"/>
        <zbutton did="2" text="EGM" />
        <zbutton did="3" text="OPM" />
        <zbutton did="4" text="CGW" />
        <zbutton did="5" text="XBN" />
    </view>

    <view y="30" layout="spacing: 2">
        <view datapath="dsSizzle:/sizzle/buzz/*[1-2]" >
            <view name="icon" bgcolor="yellow" width="30" height="50" />
            <text x="60" text="$path{'@title'}" />
            <method event="onmouseover">
                this.icon.setSource('http://www.ntnse.com/' + this.datapath.xpathQuery('@smallPromoImageUrl'));
            </method>
        </view>
    </view>

</canvas>
