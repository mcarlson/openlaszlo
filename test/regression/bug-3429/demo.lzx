<canvas bgcolor="white" width="980" height="540" oninit="debug.setX(630);debug.setY(380)" >

	<!-- Classes =========================================================================== -->
	<class name="MenuHandler">
		<method name="open">
            <![CDATA[
				// show window containing saved searches
				debug.write('EXECUTED command open');
				win_savedSearch.open();
            ]]>
           </method>

		<method name="save">
            <![CDATA[
				// show save window
            ]]>
		</method>

	</class>

	<MenuHandler name="menuHandler"/>

	<class name="Search">
		<method name="getStringCriteria" args="name">
			<![CDATA[
				// show window to select string criteria... (ie: USB)
				debug.write('Showing String criteria for window [' + name + ']');
				win_searchCriteria_string.setAttribute( "title", name );
				win_searchCriteria_string.open();
			]]>
		</method>
	</class>

	<Search name="search"/>

    <class name="ExtendedListItem" extends="listitem" height="20">
        <attribute name="color" value="0x000000" when="once"/>
        <view x="4" y="5" width="10" height="10" bgcolor="${parent.color}"/>
        <text x="18"  width="300" text="${parent.text}"/>
    </class>
	<!-- Windows ============================================================================ -->
	<class name="ExtendedWindow" extends="window">
        <dragstate name="_windowdrag"
                drag_min_x="0"
                drag_max_x="$once{canvas.width - this.width}"
                drag_min_y="0"
                drag_max_y="$once{canvas.height - this.height}"/>
    </class>

	<ExtendedWindow id="win_savedSearch" x="10" y="10" width="300"
		title="Open a Saved Search" resizable="true" closeable="true" visible="false">
		<list spacing="2" shownitems="6" width="300">
			<ExtendedListItem color="iceblue2">Item 1</ExtendedListItem>
			<ExtendedListItem color="iceblue2">Item 2</ExtendedListItem>
			<ExtendedListItem>Item 3</ExtendedListItem>
			<ExtendedListItem>Item 4</ExtendedListItem>
			<ExtendedListItem>Item 5</ExtendedListItem>
			<ExtendedListItem>Item 6</ExtendedListItem>
		</list>
	</ExtendedWindow>

	<ExtendedWindow id="win_searchCriteria_string" x="10" y="10" width="300"
		title="----" resizable="true" closeable="true" visible="false">
		<form>
			<statictext>Search String:</statictext>
			<edittext id="searchString" isdefault="true" height="20" width="120"/>
		</form>
	</ExtendedWindow>


	<!-- Commands =========================================================================== -->
	<command id="cmd_new"
	   onselect="debug.write('EXECUTED command new')"
	   key="['Control','Shift','N']"/>

	<command id="cmd_view"
	   onselect="debug.write('EXECUTED command view')"
	   key="['Control','Shift','V']"/>

	<command id="cmd_save"
	   onselect="debug.write('EXECUTED command save')"
	   key="['Control','Shift','S']"/>

	<command id="cmd_saveas"
	   onselect="debug.write('EXECUTED command save as')"
	   key="['Control','Shift','A']"/>

	<command id="cmd_open"
	   onselect="menuHandler.open()"
	   key="['Control','Shift','O']"/>


