<canvas bgcolor="#EAEAEA" width="640" height="540" >
    <view id="audioplayer" x="30" y="30" play="false"
        resource="http://www.laszlosystems.com/lps/examples/music/music.mp3"> 
        <method event="onload">
        	this.length= this.getTotalTime()
        </method>
        
        <button text="play" onclick="audioplayer.play()" />
        <button text="stop" onclick="audioplayer.stop()" />
        <button text="Rewind to start" onclick="audioplayer.seek(-10 - parent.length)" />
        <button text="Skip to end" onclick="audioplayer.seek( parent.length + 10 )" />

        <simplelayout axis="x" spacing="4"/>

        <view name="background" bgcolor="black" width="202" height="22" y="50" options="ignorelayout">
            <view name="loadbar" bgcolor="#3300ff" width="${audioplayer.loadratio * 200}" height="20" x="1" y="1">
            <view name="playbar" bgcolor="yellow" x="${audioplayer.frame/audioplayer.totalframes * 180}" width="20" height="20" />
            </view>
        </view>
    </view>
</canvas>    
