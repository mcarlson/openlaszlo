<canvas debug="true" width="1024">
    <class name="maskedview" height="40" bgcolor="red" clip="true" >
        <attribute name="sizer" value="thesizer" when="once" />
        <attribute name="width" value="thesizer.x" when="always" />
        <method name="setWidth" args="x" >
            super.setWidth( x &lt; 50 ? 50 : x );
        </method>
    </class>

        
    <maskedview>
        <view height="20" y="20" bgcolor="green" width="300"/>
    </maskedview>

    <view id="thesizer" x="100" height="10"
          oninit="Debug.setHeight(300);Debug.setY(100)"
          width="5" clickable="true" bgcolor="blue">
        <method event="onmousedown">
            dragx.apply();
        </method>
        <method event="onmouseup">
            dragx.remove();
        </method>
        <state name="dragx">
            <attribute name="x" value="this.parent.getMouse( 'x' )" when="always" />
        </state>
    </view>

    <view y="100" clip="true" bgcolor="red" >
        <text>Red view should resize to contents</text>
        <view width="10" height="10" bgcolor="blue" onclick="this.go.apply()">
            <state name="go">
                <animator attribute="y" to="100" duration="1000"/>
            </state>
        </view>
    </view>
</canvas>
