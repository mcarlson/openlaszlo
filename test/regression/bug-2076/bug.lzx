<canvas width="750" height="500" debug="true">
    <dataset name="tickerdata" src="feed.xml"/>

    <simplelayout axis="y" />

    <!-- This is broken - I can't seem to match past 'sports_list' - click to serialize-->
    <view width="337" bgcolor="red"> 
        <simplelayout axis="y" />
        <text resize="true" datapath="tickerdata:/xmldoc/sports_list/league/League_Name/text()" onclick="Debug.write(this.datapath.serialize());"/>
    </view>

    <!-- this works - * matches 'sports_list' and 'League_Name' here - and stuff we don't want/need...-->
    <view width="337" bgcolor="blue"> 
        <simplelayout axis="y" />
        <view datapath="tickerdata:/xmldoc/*">
            <simplelayout axis="x"/>
            <view datapath="league">
                <simplelayout axis="x"/>
                <text datapath="*/text()" resize="true" onclick="Debug.write(this.datapath.serialize());"/>
            </view>
        </view>
    </view>

</canvas>

