<canvas>
    <debug y="100"/>
    <view bgcolor="red" height="20" width="20">
        <animator duration="4000" repeat="Infinity" attribute='x' 
                  id="anim" from="0" to="200"/>
    </view>
    <button text="Click to pause/unpause" onclick="anim.setAttribute( 'paused' , !anim.paused )" y="300"/>
</canvas>
