<canvas>
	<dataset name="week">
		<day name="Sunday">sunny</day>
		<day name="Monday">rainy</day>
		<day name="Tuesday">shiny</day>
		<day name="Wednesday">snowy</day>
		<day name="Thursday">turdsday</day>
		<day name="Friday">the thirteenth</day>
	</dataset>
	
	<view width="300" height="200" layout="class: simplelayout; axis: y; spacing: 5" 
		bgcolor="0xd0d0d0">
		
		<view width="$once{parent.width}" height="30">
			<simplelayout axis="x" spacing="50"/>
			<text fontsize="12">Name</text>
			<text fontsize="12">Value</text>
			<text fontsize="12">Datapath</text>
		</view>

		<view width="$once{parent.width}" height="30" bgcolor="teal">
			<datapath name="dpath" xpath="week:/day[2]"/>
			<simplelayout axis="x"/>
			<text fontsize="12" datapath="@name"/>
			<text fontsize="12" datapath="text()"/>
			<text fgcolor="0x0000dd" fontsize="12" label="${parent.dpath.serialize()}"/>
		</view>
	</view>
