<?xml version="1.0"?>
<canvas debug="true">
  <baselist layout="axis:y;spacing:2" multiselect="true">
    <baselistitem height="15" width="25" bgcolor="${selected ? 0xffff00 : 0x0000ff}"/>
    <baselistitem height="15" width="50" bgcolor="${selected ? 0xffff00 : 0x0000ff}"/>
    <baselistitem height="15" width="75" bgcolor="${selected ? 0xffff00 : 0x0000ff}"/>
    <baselistitem height="15" width="100" bgcolor="${selected ? 0xffff00 : 0x0000ff}"/>
  </baselist>

  <baselist layout="axis:y;spacing:2" x="200" multiselect="true">
    <dataset>
      <item width="25"/>
      <item width="50"/>
      <item width="75"/>
      <item width="100"/>
    </dataset>
    <baselistitem datapath="local:parent:/item" height="15" width="100" bgcolor="${selected ? 0xffff00 : 0x0000ff}"/>
  </baselist>
</canvas> 

