<canvas debug="true">
  <debug y="100"/>
  <view x="10" y="10" width="200" fontsize="11">
    <inputtext bgcolor="red" >Type, then press TAB</inputtext>

    <text bgcolor="0x00ff00">
      <method event="onfocus">
        debug.write(this + ".onfocus");
        this.setAttribute("bgcolor", 0x00FFFF);
      </method>

      <method event="onblur">
        debug.write(this + ".onblur");
        this.setAttribute("bgcolor", 0x00FF00);
      </method>
    </text>

    <inputtext bgcolor="blue"/>

    <method name="addSubview" args="p">
    	p.setWidth(this.width)
    	p.setHeight(20)
    	p.setAttribute('focusable', true)
    	super.addSubview(p)
    </method>
    <simplelayout axis="y" spacing="5"/>
  </view>
</canvas>
