<canvas width="800" height="600" >

    <dataset name="cartoonland">
        <city name="springfield">
            <family name="simpsons" father="homer" mother="marge"/>
            <family name="flanders" father="ned" />
        </city>
    </dataset>

    <datapointer name="original" xpath="cartoonland:/city" />

    <button text="set datapath" 
            onclick="canvas.datadisplay.datapath.setFromPointer(canvas.original)"/>

    <view name="datadisplay" bgcolor="#EECCEE">
        <datapath />
        <text label="Data:" />
        <text datapath="family/@name" />
        <simplelayout axis="y" spacing="10" />
    </view>

    <simplelayout axis="y" spacing="20" />
         
