<canvas>
    <view id="v1" width="200" bgcolor="red" height="100" opacity="1" />

    <view id="v2" width="${200*whatever}" bgcolor="red" height="100" opacity="1" y="110">
        <attribute name="whatever" value="1"/>
    </view>
    
    <button text="shrink" x="210" y="90" onclick="v1.animate('opacity',0,1000,false);v2.animate('whatever',0,300)" />
    <button text="expand" x="260" y="90" onclick="v1.animate('opacity',1,1000,false);v2.animate('whatever',1,300)" />
