<canvas debug="true">
  <simplelayout/>
  <view clickable="true" name="rclick" width="20" height="20" bgcolor="red">
    <attribute name="clickcnt" value="0"/>
    <method event="onclick">
      debug.write('red click' , clickcnt++ );
    </method>
    <method event="ondblclick">
      debug.write('red double click' , clickcnt++ );
    </method>
  </view>
  <view clickable="true" name="bclick" width="20" height="20" bgcolor="blue">
    <attribute name="clickcnt" value="0"/>
    <method event="onclick">
      debug.write('blue click' , clickcnt++ );
    </method>
    <method event="ondblclick">
      debug.write('blue double click' , clickcnt++ );
    </method>
  </view>
</canvas>



