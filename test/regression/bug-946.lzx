
<canvas width="800" height="500" bgcolor="0x1E3A49" debug="true" oninit="debug.setY(100)">
    <view>
        <view name="x" width="100" height="100" bgcolor="red">
            <view name="xsub1" bgcolor="teal"/>
        </view>
        <view name="y" width="100" height="100" bgcolor="white" onclick="this.deleteNode()"/>
        <view name="z" width="100" height="100" bgcolor="blue"  onclick="this.deleteNode()">
            <state name="mystate">
                <view name="mystateview"/>
            </state>
            <state name="appliedstate" apply="true">
                <view name="astateview"/>
            </state>
        </view>
        <simplelayout axis="x"/>
        <method event="oninit">
            debug.write("fire 1");
            x.deleteNode();
            debug.write("fire 2");
            x.deleteNode();
            debug.write("ok");
        </method>
    </view>
