<canvas width="1024" height="600">
  <debug x="300" y="300"/>

  <class name="box" width="20" height="${width}" bgcolor="red" 
         onclick="this.animate( 'x' , 100 , 1000 , true )" />

  <box id="box1" bgcolor="red">
      <animator attribute="width" to="50" duration="1000"/>
  </box>

  <class name="b2" bgcolor="blue" extends="box"  >
      <animator attribute="width" to="50" duration="1000"/>
 </class>

  <b2 id="box2" x="100" y="100" />

</canvas>
 
