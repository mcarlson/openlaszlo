<canvas>

<resource name="checked" >
    <frame src="../resources/swf/checkbox/chkbox_chk_dslct.swf" />
    <frame src="../resources/swf/checkbox/chkbox_chk_mo.swf" />
    <frame src="../resources/swf/checkbox/chkbox_chk_slct.swf" />
</resource>
<resource name="unchecked" >
    <frame src="../resources/swf/checkbox/chkbox_empty_dslct.swf" />
    <frame src="../resources/swf/checkbox/chkbox_empty_mo.swf" />
    <frame src="../resources/swf/checkbox/chkbox_empty_slct.swf" />
</resource>

<class name="mycheckbox" >
       <attribute name="value" value="false" />
       <attribute name="label" value="my checkbox" type="string"/>
       <basebutton onclick="parent.setAttribute('value',!parent.value)">
            <attribute name="resource" value="${parent.value ? 'checked' : 'unchecked'}"/>
        </basebutton>

       <text>
           <attribute name="text" value="${parent.label}"/>
       </text>
       <simplelayout axis="x"/>
</class>

<mycheckbox id="a" label="test"/>

<mycheckbox id="b" label="this has a really long name"/>

<mycheckbox id="c" value="true" label="checked by default"/>

       <basebutton>
            <attribute name="resource" value="checked"/>
        </basebutton>
    <simplelayout spacing="20"/>
