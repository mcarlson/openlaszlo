<canvas>
	<include href="redmond"/>
    <dataset name="conversionOptions">
        <select>
            <option value="1">Celsius to Fahrenheit</option>
            <option value="2">Fahrenheit to Celsius</option>
        </select>
    </dataset>

    <window title="Converter" width="400">
        <simplelayout axis="x" spacing="10" />
        <text valign="middle">Convert</text>
        <windowtext valign="middle" width="60"/>

        <combobox valign="middle" width="152" shownitems="2" 
                  itemfield="conversionOptions:/select/option/text()" 
                  name="mycombo">
        </combobox>
    </window>
</canvas>
