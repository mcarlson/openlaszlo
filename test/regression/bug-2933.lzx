<canvas debug="true">

    <dataset name="widgetPullDowns_ds">
        <pulldowns>
            <pulldown widget_id="1">
                <item value="1">My Website</item>
                <item value="3">About Me Page</item>
            </pulldown>
            <pulldown widget_id="2">
                <item value="2">Auntie Vera's Site</item>
                <item value="4">My Blog</item>
            </pulldown>
        </pulldowns>
    </dataset>

    <simplelayout axis="y" spacing="10" />

    <combobox name="combo" width="130"
              defaulttext="choose one..."
              editable="false"
              shownitems="3">
        <textlistitem name="pulldownElements"   
        	text="$path{'text()'}"
        	value="$path{'@value'}"/>
    </combobox>

    <button>Set the datapath now
        <method event="onclick">
			combo.pulldownElements.setDatapath("widgetPullDowns_ds:/pulldowns/pulldown[1]/item");
			debug.write('Datapath set, check the combobox')
        </method>
    </button>
</canvas>
