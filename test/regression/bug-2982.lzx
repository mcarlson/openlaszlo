<canvas debug="true" width="640" height="480">

  <debug y="400" />

  <include href="lzunit" />

  <class name="TestBrowserEscape" extends="TestCase">
    <method name="testEscape">
      <![CDATA[
        assertEquals('&amp;', LzBrowser.xmlEscape('&'));
        assertEquals('&quot;', LzBrowser.xmlEscape('"'));
        assertEquals('&apos;', LzBrowser.xmlEscape("'"));
        assertEquals('&lt;', LzBrowser.xmlEscape('<'));
        assertEquals('&gt;', LzBrowser.xmlEscape('>'));
      ]]>
    </method>
  </class>

  <TestSuite>
    <TestBrowserEscape />
  </TestSuite>

</canvas>
