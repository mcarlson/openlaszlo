<canvas>
    <view id="d" width="20" height="20" bgcolor="silver"
          onclick="this.setAttribute ('value' , !this.value)">
        <attribute name="value" value="false"/>
    </view>

    <view y="50" width="80" height="80" bgcolor="red"
          visible="${!global.d.value}"/>
    <view y="50" x="100" width="80" height="80" bgcolor="green"
          visible="${!d.value}"/>
</canvas>
