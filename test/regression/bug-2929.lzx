<canvas debug="true"> 
    <debug y="300" />
	<simplelayout axis="y" spacing="4"/>
	<view id="logo" resource="../resources/swf/logo.swf" play="true"/>
	<view bgcolor="black" width="202" height="22">
		<view name="playbar" y="1" bgcolor="green" x="${1 + logo.frame/logo.totalframes * 180}" width="20" height="20" />
	</view>
	
	<view bgcolor="black" width="202" height="22">
		<view name="playbar" y="1" bgcolor="yellow" x="${1 + logo.getPlayPerc() * 180}" width="20" height="20" />
	</view>

</canvas>
