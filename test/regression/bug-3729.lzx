<canvas debug="true">
    <dataset name="weatherdata" type="http" request="true"
        src="http://localhost:8080/lps/sample-apps/contacts/contactsdata.xml"/>
    <simplelayout/>
    <grid name="tg" datapath="weatherdata:/resultset">
        <gridcolumn>name
            <text datapath="@displayname"/>
        </gridcolumn>
    </grid>

    <button onclick="tg.clearSelection()">clear it</button>
    <method event="onselect" reference="tg">
        Debug.write( tg.getSelection() );
    </method>
        
</canvas>
