<canvas width="1000" height="1000">
  
<button text="Make View Visible" x="0" y="0" width="120"
   onclick="Debug.write( 'Button clicked! Focus = ' + LzFocus.getFocus() ); tfield.setVisible( true ); LzFocus.setFocus( tfield );   Debug.write( 'After setFocus, focus = ' + LzFocus.getFocus() );"/>

<inputtext id="tfield" visible="false" x="0" y="50" width="50" height="20"/>
                
<method event="onfocus" reference="LzFocus" args="v">
   Debug.write( "focus changed! " + v + " now has focus" );
</method>
</canvas>
