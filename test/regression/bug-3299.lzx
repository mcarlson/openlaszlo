<canvas>
    <simplelayout axis="x" />

    <button onclick="xx.setVolume(100); xx.play(); v.setText(xx.getVolume());">
        doit
    </button>

    <button onclick="xx.setVolume(50); xx.play(); v.setText(xx.getVolume());">
        half
    </button>

    <view id="xx" play="false"
          resource="http://www.laszlosystems.com/images/mredfirstseason.mp3">
        <method event="oninit">
            this.setVolume(0);
        </method>
    </view>

    <text width="100" id="v" />
</canvas>
