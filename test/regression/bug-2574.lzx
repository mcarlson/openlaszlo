<canvas width="800" bgcolor="0xeaeaea">

    <dataset name="surveydataset" type="http"
        src="http:testsurvey.jsp"/>

    <class name="testborder" defaultplacement="'content'" >
        <attribute name="text" value="test name" type="html" />
        <view bgcolor="0x979797" height="20" 
              width="${this.title.getTextWidth() + 10}">
            <text x="4" y="2" name="title" resize="true" fgcolor="0xFFFFFF"
                  text="${classroot.text}" >
                <method event="ontext">
                    parent.setWidth(this.getTextwidth() + 10)
                </method>
            </text>
        </view>
        <view bgcolor="0x979797" width="100%" height="10"
              options="releaseToLayout">
            <view name="content" bgcolor="0xC0C0C0" x="2" y="2" 
                  width="${parent.width - 4}" height="${parent.height - 4}" />
        </view>
        <resizelayout axis="y" />
    </class>

    <testborder x="40" y="40" width="240" height="300" text="Vacation Survey">
        <form bgcolor="red" id="myform" 
              width="${immediateparent.width}" 
              height="${immediateparent.height}" >
            <submit name="survey" data="${surveydataset}"/>
            <statictext>What is your favorite vacation spot?</statictext>
            <radiogroup x="20" name="place">
            	<radiobutton value="0">Hawaii</radiobutton>
            	<radiobutton value="1">Paris</radiobutton>
            	<radiobutton value="2">Jamaica</radiobutton>
            </radiogroup>
            <checkbox  x="20" name="show">show results</checkbox>
            <button isdefault="true"
                onclick="parent.survey.submit()">submit</button>
        </form>

        <view x="30" name="results" datapath="surveydataset:/xml">
            <view>
                <text>you voted for #</text>
                <text datapath="vote/text()"/>
                <simplelayout axis="x"/>
            </view>
            <view>
                <text>summary</text>
                <text datapath="summary/option@name"/>
                <text datapath="summary/option/text()"/>
                <simplelayout axis="y"/>
            </view>
            <simplelayout axis="y"/>
        </view>

        <simplelayout spacing="-30"/>
    </testborder>

    <class name="doinset">
        <attribute name="inset" type="string" />
        <button text="${ parent.inset + '+ 10'}">
            <method event="onclick">
                myform.setAttribute(parent.inset, myform[parent.inset] + 10);
            </method>
        </button> 
    </class>

    <view x="350" y="40" layout="axis: y; spacing: 10">
        <doinset inset="inset_left" />
        <doinset inset="inset_right" />
        <doinset inset="inset_top" />
        <doinset inset="inset_bottom" />
    </view>
</canvas>
