<canvas>
    <view bgcolor="red" height="100">
        <method event="onmouseover">
            this.setAttribute( 'expanded', true );
        </method>
        <method event="onmouseout">
            this.setAttribute( 'expanded', false );
        </method>
        <attribute name="expanded" value="false"/>
        <state apply="${ parent.expanded }">
            <animator attribute="width" to="100" duration="1500"/>
        </state>
        <state apply="${ !parent.expanded }">
            <animator attribute="width" to="50" duration="1500"/>
        </state>
    </view>
