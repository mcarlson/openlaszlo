<canvas bgcolor="silver">
    <simplelayout inset="20" spacing="10"/>
    <view id="v" bgcolor="red" width="20" height="20"/>

    <button onclick="v.setbgcolor(null)">remove bgcolor</button>
    <button onclick="v.setbgcolor(0x0000ff)">set blue</button>
</canvas>
