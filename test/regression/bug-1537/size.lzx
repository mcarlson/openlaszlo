<canvas height="600">
    <debug x="300"/>
    <resource name="corner" src="corner.swf"/>
    <view bgcolor="blue" >
        <view bgcolor="red" width="10" height="10" opacity=".5"
            x="10" y="10" xoffset="5" yoffset="5"
            clickable="true">
            <method event="onclick">
                this.agroup.doStart();
            </method>
            <animatorgroup duration="800" start="false" 
                        name="agroup" >
                <animator attribute='x'  to="20"/>
                <animator attribute='width'  to="20"/>
                <animator attribute='rotation'  to="360"/>
                <animator attribute='y'  to="20"/>
                <animator attribute='height'  to="30"/>
                <animator attribute='x' to="-10" />
                <animator attribute='width' to="15" />
                <animator attribute='rotation' to="0" />
                <animator attribute='y' to="-10" />
                <animator attribute='height' to="15" />
            </animatorgroup>
        </view>
    </view>

    <view bgcolor="blue" x="100" y="100">
        <view id="followme" bgcolor="red" width="10" height="10" opacity=".5"
            x="10" y="10"
            clickable="true">
            <method event="onclick">
                this.agroup.doStart();
            </method>
            <animatorgroup duration="800" start="false" 
                        name="agroup" >
                <animator attribute='x'  to="20"/>
                <animator attribute='width'  to="20"/>
                <animator attribute='rotation'  to="360"/>
                <animator attribute='y'  to="20"/>
                <animator attribute='height'  to="30"/>
                <animator attribute='x' to="-10" />
                <animator attribute='width' to="15" />
                <animator attribute='rotation' to="0" />
                <animator attribute='y' to="-10" />
                <animator attribute='height' to="15" />
            </animatorgroup>
        </view>
    </view>

    <view bgcolor="gray">
        <attribute name="x" value="${justholds.getBounds()['x']}"/>
        <attribute name="y" value="${justholds.getBounds()['y']}"/>
        <attribute name="width" value="${justholds.getBounds()['width']}"/>
        <attribute name="height" value="${justholds.getBounds()['height']}"/>
    </view>
    <view id="justholds" x="100" y="200">
        <view id="followme" bgcolor="red" width="10" height="10" opacity=".5"
            x="10" y="10"
            clickable="true">
            <method event="onclick">
                this.agroup.doStart();
            </method>
            <animatorgroup duration="800" start="false" 
                        name="agroup" >
                <animator attribute='x' to="20"/>
                <animator attribute='width' to="20"/>
                <animator attribute='rotation' to="360"/>
                <animator attribute='y' to="20"/>
                <animator attribute='height' to="30"/>
                <animator attribute='x' to="-10" />
                <animator attribute='width' to="15" />
                <animator attribute='rotation' to="0" />
                <animator attribute='y' to="-10" />
                <animator attribute='height' to="15" />
            </animatorgroup>
        </view>
    </view>
</canvas>
