<canvas height="600">
    <debug x="300"/>
    <resource name="corner" src="corner.swf"/>
    <view bgcolor="teal" id="pokeme" x="300" width="20" height="20" xoffset="-10"
          onclick="this.animate( 'xoffset' , 80 , 1000)">
    </view>



    <view>
        <view x="10" y="10" width="100" height="30" bgcolor="blue">
            <view resource="corner" bgcolor="yellow"                                                                                 />
            <view resource="corner" align="right" rotation="90" bgcolor="yellow"/>
        </view>

        <view x="10" y="10" width="100" height="30" bgcolor="blue">
            <view resource="corner" bgcolor="yellow"                                                                                 />
            <view resource="corner"  rotation="90" bgcolor="yellow"
                x="parent.width - this.getBounds()['width'] - 
                                this.getBounds()['xoffset']"/>
        </view>
        <simplelayout spacing="6"/>
    </view>

    <view bgcolor="yellow">
        <attribute name="x" value="${followme.getBounds()['x']}"/>
        <attribute name="y" value="${followme.getBounds()['y']}"/>
        <attribute name="width" value="${followme.getBounds()['width']}"/>
        <attribute name="height" value="${followme.getBounds()['height']}"/>
    </view>

    <view id="followme" bgcolor="red" width="100" height="100" opacity=".5"
          x="100" y="100"
          clickable="true">
        <method event="onclick">
            this.agroup.doStart();
        </method>
        <animatorgroup duration="3000" start="false" 
                       name="agroup" >

            <animatorgroup process="simultaneous">
                <animator attribute='x' from="100" to="200"/>
                <animator attribute='width' from="100" to="200"/>
                <animator attribute='rotation' from="0" to="360"/>
                <animator attribute='y' from="100" to="200"/>
                <animator attribute='height' from="100" to="300"/>
            </animatorgroup>
            <animatorgroup process="simultaneous">
                <animator attribute='x' to="100" from="200"/>
                <animator attribute='width' to="100" from="200"/>
                <animator attribute='rotation' to="0" from="360"/>
                <animator attribute='y' to="100" from="200"/>
                <animator attribute='height' to="100" from="300"/>
            </animatorgroup>
        </animatorgroup>
    </view>


    <view bgcolor="silver">
        <attribute name="x" value="${followme2.getBounds()['x']}"/>
        <attribute name="y" value="${followme2.getBounds()['y']}"/>
        <attribute name="width" value="${followme2.getBounds()['width']}"/>
        <attribute name="height" value="${followme2.getBounds()['height']}"/>
    </view>
    <view id="followme2" bgcolor="green" width="100" height="100" opacity=".5"
          x="200" y="200" 
          clickable="true">
        <method event="onclick">
            this.agroup.doStart();
        </method>
        <view bgcolor="black" width="5" height="5" 
              x="parent.xoffset" y="parent.yoffset"/>

        <animatorgroup duration="800" start="false" 
                       name="agroup" >
            <animatorgroup >
                <animator attribute='x' from="200" to="300"/>
                <animator attribute='width' from="100" to="200"/>
                <animator attribute='y' from="200" to="300"/>
                <animator attribute='height' from="100" to="300"/>
                <animator attribute='xoffset' from="0" to="100"/>
                <animator attribute='yoffset' from="0" to="150"/>
                <animator attribute='rotation' from="0" to="360"/>
            </animatorgroup>
            <animatorgroup >
                <animator attribute='x' to="200" from="300"/>
                <animator attribute='width' to="100" from="200"/>
                <animator attribute='rotation' to="0" from="360"/>
                <animator attribute='y' to="200" from="300"/>
                <animator attribute='height' to="100" from="300"/>
                <animator attribute='xoffset' to="0" from="100"/>
                <animator attribute='yoffset' to="0" from="150"/>
            </animatorgroup>
        </animatorgroup>
    </view>
</canvas>
