    <method name="setDateTest">
        var now = new Date();
        var soon = new Date();
        soon.setTime(8630000);
        cell1.setDate(now, soon);
        var oct12 = new Date();
        oct12.setMonth(9);
        oct12.setDate(12);
        cell2.setDate(oct12,oct12);
    </method>
        
    <button onclick="canvas.loadSomeData()">load some data</button>
